---
// About section - Información personal con efectos Three.js
---

<section id="about" class="about section section-bg">
    <!-- Three.js container for background effects -->
    <div id="about-three-container" class="about-three-container"></div>

    <div class="container">
        <!-- Header -->
        <div class="section-header">
            <div class="section-badge animate-on-scroll">
                <i class="fas fa-user" aria-hidden="true"></i>
                <span>Get to Know Me</span>
            </div>
            <h2 class="section-title animate-on-scroll gradient-text-animated">Who I Am</h2>
            <p class="section-subtitle animate-on-scroll">Passionate backend developer crafting robust solutions</p>
        </div>

        <!-- Layout mejorado con dos columnas en desktop -->
        <div class="about-grid">
            <!-- Columna izquierda: Foto con efectos -->
            <div class="about-visual animate-on-scroll">
                <div class="profile-container">
                    <!-- Foto -->
                    <div class="profile-photo-wrapper">
                        <img src="/images/profile.jpeg" alt="Carlos Orbegoso" class="profile-img">
                    </div>
                </div>

                <!-- Stats debajo de la foto -->
                <div class="stats-row">
                    <div class="stat-item">
                        <span class="stat-number" data-count="5">0</span>
                        <span class="stat-plus">+</span>
                        <span class="stat-label">Years</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number" data-count="50">0</span>
                        <span class="stat-plus">+</span>
                        <span class="stat-label">Projects</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number" data-count="100">0</span>
                        <span class="stat-plus">%</span>
                        <span class="stat-label">Commitment</span>
                    </div>
                </div>
            </div>

            <!-- Columna derecha: Contenido -->
            <div class="about-content animate-on-scroll">
                <h3 class="content-title">
                    <span class="title-highlight">Backend Developer</span>
                    <span class="title-separator">&</span>
                    <span class="title-accent">Java Specialist</span>
                </h3>

                <p class="content-description">
                    Backend developer with over <strong>5 years of experience</strong> building enterprise applications.
                    I specialize in creating <strong>robust, scalable systems</strong> using modern technologies
                    and best practices in software architecture.
                </p>

                <p class="content-description">
                    Passionate about <strong>clean code</strong>, <strong>microservices</strong>, and delivering
                    high-quality solutions that make a real impact.
                </p>

                <!-- Tech Stack con iconos -->
                <div class="tech-section">
                    <h4 class="tech-title">Tech Stack</h4>
                    <div class="tech-grid">
                        <div class="tech-item">
                            <i class="fab fa-java"></i>
                            <span>Java</span>
                        </div>
                        <div class="tech-item">
                            <i class="fas fa-leaf"></i>
                            <span>Spring Boot</span>
                        </div>
                        <div class="tech-item">
                            <i class="fas fa-rocket"></i>
                            <span>Quarkus</span>
                        </div>
                        <div class="tech-item">
                            <i class="fab fa-angular"></i>
                            <span>Angular</span>
                        </div>
                        <div class="tech-item">
                            <i class="fab fa-docker"></i>
                            <span>Docker</span>
                        </div>
                        <div class="tech-item">
                            <i class="fas fa-dharmachakra"></i>
                            <span>Kubernetes</span>
                        </div>
                    </div>
                </div>

                <!-- CTA -->
                <div class="about-cta">
                    <a href="#contact" class="cta-button primary">
                        <i class="fas fa-envelope"></i>
                        <span>Let's Talk</span>
                    </a>
                    <a href="#projects" class="cta-button secondary">
                        <i class="fas fa-folder-open"></i>
                        <span>View Work</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Three.js container */
    .about-three-container {
        position: absolute;
        inset: 0;
        z-index: 0;
        pointer-events: none;
        overflow: hidden;
    }

    .about.section {
        position: relative;
    }

    .about .container {
        position: relative;
        z-index: 1;
    }

    /* Grid principal */
    .about-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        align-items: center;
        max-width: 1100px;
        margin: 0 auto;
    }

    @media (min-width: 768px) {
        .about-grid {
            grid-template-columns: 1fr 1.2fr;
            gap: 4rem;
        }
    }

    /* Columna visual */
    .about-visual {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
    }

    /* Contenedor de foto */
    .profile-container {
        position: relative;
        width: 220px;
        height: 220px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @media (min-width: 768px) {
        .profile-container {
            width: 280px;
            height: 280px;
        }
    }

    /* Wrapper de foto - simplified, no heavy animations */
    .profile-photo-wrapper {
        position: relative;
        width: 180px;
        height: 180px;
        z-index: 2;
        border-radius: 50%;
        overflow: hidden;
        background: linear-gradient(135deg, var(--primary-color), #00ffff, #aa44ff);
        padding: 4px;
        box-shadow:
            0 0 30px rgba(0, 255, 255, 0.4),
            0 0 60px rgba(0, 255, 255, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .profile-photo-wrapper:hover {
        transform: scale(1.02);
        box-shadow:
            0 0 40px rgba(0, 255, 255, 0.5),
            0 0 80px rgba(0, 255, 255, 0.3);
    }

    @media (min-width: 768px) {
        .profile-photo-wrapper {
            width: 220px;
            height: 220px;
            padding: 5px;
        }
    }

    .profile-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center top;
        border-radius: 50%;
        background: var(--bg-color);
        display: block;
        transition: transform 0.5s ease;
    }

    .profile-photo-wrapper:hover .profile-img {
        transform: scale(1.05);
    }

    /* Stats */
    .stats-row {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
    }

    .stat-item {
        text-align: center;
        padding: 1rem 1.25rem;
        background: rgba(0, 255, 255, 0.03);
        border: 1px solid rgba(0, 255, 255, 0.1);
        border-radius: 12px;
        transition: all 0.3s ease;
    }

    .stat-item:hover {
        background: rgba(0, 255, 255, 0.08);
        border-color: rgba(0, 255, 255, 0.3);
        transform: translateY(-3px);
    }

    .stat-number {
        font-size: 1.75rem;
        font-weight: 800;
        color: var(--primary-color);
        line-height: 1;
    }

    .stat-plus {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--primary-color);
    }

    .stat-label {
        display: block;
        font-size: 0.7rem;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-top: 0.25rem;
    }

    /* Contenido */
    .about-content {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .content-title {
        font-size: 1.75rem;
        font-weight: 700;
        line-height: 1.3;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        align-items: center;
    }

    @media (min-width: 768px) {
        .content-title {
            font-size: 2rem;
        }
    }

    .title-highlight {
        color: var(--primary-color);
    }

    .title-separator {
        color: var(--text-secondary);
        font-weight: 400;
    }

    .title-accent {
        color: #00ffff;
        text-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
    }

    .content-description {
        color: var(--text-secondary);
        line-height: 1.7;
        font-size: 1rem;
    }

    .content-description strong {
        color: var(--primary-color);
        font-weight: 600;
    }

    /* Tech Section */
    .tech-section {
        margin-top: 0.5rem;
    }

    .tech-title {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
    }

    .tech-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0.75rem;
    }

    @media (min-width: 480px) {
        .tech-grid {
            grid-template-columns: repeat(6, 1fr);
        }
    }

    .tech-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 0.5rem;
        background: rgba(0, 255, 255, 0.03);
        border: 1px solid rgba(0, 255, 255, 0.1);
        border-radius: 10px;
        transition: all 0.3s ease;
        cursor: default;
    }

    .tech-item:hover {
        background: rgba(0, 255, 255, 0.1);
        border-color: rgba(0, 255, 255, 0.4);
        transform: translateY(-3px);
        box-shadow: 0 5px 20px rgba(0, 255, 255, 0.2);
    }

    .tech-item i {
        font-size: 1.25rem;
        color: var(--primary-color);
        transition: transform 0.3s ease;
    }

    .tech-item:hover i {
        transform: scale(1.2);
    }

    .tech-item span {
        font-size: 0.65rem;
        color: var(--text-secondary);
        font-weight: 500;
        text-align: center;
    }

    /* CTA Buttons */
    .about-cta {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
        flex-wrap: wrap;
    }

    .cta-button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-size: 0.875rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .cta-button.primary {
        background: linear-gradient(135deg, var(--primary-color), #00ffff);
        color: #000;
        border: none;
    }

    .cta-button.primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 25px rgba(0, 255, 255, 0.4);
    }

    .cta-button.secondary {
        background: transparent;
        color: var(--primary-color);
        border: 1px solid rgba(0, 255, 255, 0.3);
    }

    .cta-button.secondary:hover {
        background: rgba(0, 255, 255, 0.1);
        border-color: rgba(0, 255, 255, 0.5);
        transform: translateY(-2px);
    }

    /* Animación al scroll */
    .animate-on-scroll {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease, transform 0.6s ease;
    }

    .animate-on-scroll.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Responsive pequeño */
    @media (max-width: 480px) {
        .stats-row {
            gap: 0.75rem;
        }

        .stat-item {
            padding: 0.75rem 1rem;
        }

        .stat-number {
            font-size: 1.5rem;
        }

        .content-title {
            font-size: 1.5rem;
            justify-content: center;
            text-align: center;
        }

        .about-content {
            text-align: center;
        }

        .about-cta {
            justify-content: center;
        }
    }
</style>

<script>
    // Animación de números contadores
    function animateCounters() {
        const counters = document.querySelectorAll('.stat-number[data-count]');

        counters.forEach(counter => {
            const target = parseInt(counter.getAttribute('data-count') || '0');
            const duration = 2000;
            const start = 0;
            const startTime = performance.now();

            function updateCounter(currentTime: number) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);

                // Easing
                const easeOut = 1 - Math.pow(1 - progress, 3);
                const current = Math.floor(start + (target - start) * easeOut);

                counter.textContent = current.toString();

                if (progress < 1) {
                    requestAnimationFrame(updateCounter);
                }
            }

            requestAnimationFrame(updateCounter);
        });
    }

    // Intersection Observer para animaciones
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');

                // Activar contadores si es la sección about
                if (entry.target.closest('#about')) {
                    animateCounters();
                }
            }
        });
    }, { threshold: 0.2 });

    document.querySelectorAll('.animate-on-scroll').forEach(el => {
        observer.observe(el);
    });
</script>
