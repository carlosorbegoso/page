---
// Projects section - Proyectos destacados con animaciones mejoradas
---

<section id="projects" class="projects section section-bg">
    <div class="projects-background">
        <div class="projects-pattern"></div>
        <!-- Floating code symbols -->
        <div class="code-symbols">
            <span class="code-symbol" style="--x: 5%; --y: 15%; --delay: 0s;">&lt;/&gt;</span>
            <span class="code-symbol" style="--x: 90%; --y: 25%; --delay: 1s;">{ }</span>
            <span class="code-symbol" style="--x: 15%; --y: 75%; --delay: 2s;">( )</span>
            <span class="code-symbol" style="--x: 85%; --y: 80%; --delay: 1.5s;">[ ]</span>
        </div>
    </div>

    <div class="container">
        <div class="section-header">
            <div class="section-badge proj-animate" data-anim-delay="0">
                <i class="fas fa-code" aria-hidden="true"></i>
                <span>My Work</span>
            </div>
            <h2 class="section-title proj-animate gradient-text-animated" data-anim-delay="100">Featured Projects</h2>
            <p class="section-subtitle proj-animate" data-anim-delay="200">Enterprise applications and innovative solutions</p>
        </div>

        <div class="projects-grid">
            <!-- Project 1 - E-commerce -->
            <div class="project-card proj-animate" data-anim-delay="300">
                <div class="card-glow"></div>
                <div class="project-header">
                    <div class="project-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="project-links">
                        <a href="#" class="project-link" title="GitHub">
                            <i class="fab fa-github"></i>
                        </a>
                        <a href="#" class="project-link" title="Demo">
                            <i class="fas fa-external-link-alt"></i>
                        </a>
                    </div>
                </div>
                <div class="project-content">
                    <h3 class="project-title">E-commerce Microservices</h3>
                    <div class="project-type">
                        <span class="type-badge">Full Stack</span>
                        <span class="type-tech">Java + Angular</span>
                    </div>
                    <p class="project-description">Microservices architecture for e-commerce platform. Implementation of user, catalog, cart, and payment services with Spring Boot and Angular.</p>
                    <div class="project-features">
                        <div class="feature">
                            <i class="fas fa-check"></i>
                            <span>Scalable architecture</span>
                        </div>
                        <div class="feature">
                            <i class="fas fa-check"></i>
                            <span>Real-time inventory</span>
                        </div>
                    </div>
                    <div class="project-tech">
                        <span class="tech-pill">Java 11</span>
                        <span class="tech-pill">Spring Cloud</span>
                        <span class="tech-pill">Angular</span>
                        <span class="tech-pill">MySQL</span>
                        <span class="tech-pill">Kubernetes</span>
                    </div>
                </div>
            </div>

            <!-- Project 2 - Hospital -->
            <div class="project-card proj-animate" data-anim-delay="400">
                <div class="card-glow"></div>
                <div class="project-header">
                    <div class="project-icon">
                        <i class="fas fa-hospital"></i>
                    </div>
                    <div class="project-links">
                        <a href="#" class="project-link" title="GitHub">
                            <i class="fab fa-github"></i>
                        </a>
                        <a href="#" class="project-link" title="Demo">
                            <i class="fas fa-external-link-alt"></i>
                        </a>
                    </div>
                </div>
                <div class="project-content">
                    <h3 class="project-title">Hospital Management System</h3>
                    <div class="project-type">
                        <span class="type-badge">Backend</span>
                        <span class="type-tech">Quarkus</span>
                    </div>
                    <p class="project-description">Comprehensive hospital management system with Quarkus. Modules for patients, doctors, appointments, and pharmacy. REST API with OpenAPI documentation.</p>
                    <div class="project-features">
                        <div class="feature">
                            <i class="fas fa-check"></i>
                            <span>HIPAA compliant</span>
                        </div>
                        <div class="feature">
                            <i class="fas fa-check"></i>
                            <span>Automated testing</span>
                        </div>
                    </div>
                    <div class="project-tech">
                        <span class="tech-pill">Quarkus</span>
                        <span class="tech-pill">PostgreSQL</span>
                        <span class="tech-pill">JUnit 5</span>
                        <span class="tech-pill">Swagger</span>
                        <span class="tech-pill">Docker</span>
                    </div>
                </div>
            </div>

            <!-- Project 3 - API Gateway -->
            <div class="project-card proj-animate" data-anim-delay="500">
                <div class="card-glow"></div>
                <div class="project-header">
                    <div class="project-icon">
                        <i class="fas fa-network-wired"></i>
                    </div>
                    <div class="project-links">
                        <a href="#" class="project-link" title="GitHub">
                            <i class="fab fa-github"></i>
                        </a>
                    </div>
                </div>
                <div class="project-content">
                    <h3 class="project-title">API Gateway Service</h3>
