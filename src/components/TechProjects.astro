        .contributions-section {
            padding: 1.25rem;
        }

        .contributions-header h3 {
            font-size: 1rem;
        }

        .streak-badge {
            padding: 0.4rem 0.75rem;
            font-size: 0.75rem;
        }

        .contribution-graph {
            grid-template-columns: repeat(13, 1fr);
            gap: 2px;
            margin-bottom: 0.75rem;
        }

        .contribution-day {
            border-radius: 2px;
        }

        .contribution-legend {
            font-size: 0.6rem;
        }

        .legend-square {
            width: 10px;
            height: 10px;
