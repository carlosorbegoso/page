    .streak-badge {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.5rem 1rem;
        background: linear-gradient(135deg, rgba(255, 107, 53, 0.15), rgba(255, 50, 50, 0.1));
        border: 1px solid rgba(255, 107, 53, 0.4);
        border-radius: 50px;
        font-size: 0.85rem;
        color: #ff6b35;
        font-weight: 700;
