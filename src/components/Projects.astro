---
// Projects section - Fetches real projects from GitHub API
---

<section id="projects" class="projects section section-bg">
    <div class="projects-background">
        <div class="projects-pattern"></div>
        <div class="code-symbols">
            <span class="code-symbol" style="--x: 5%; --y: 15%; --delay: 0s;">&lt;/&gt;</span>
            <span class="code-symbol" style="--x: 90%; --y: 25%; --delay: 1s;">{ }</span>
            <span class="code-symbol" style="--x: 15%; --y: 75%; --delay: 2s;">( )</span>
            <span class="code-symbol" style="--x: 85%; --y: 80%; --delay: 1.5s;">[ ]</span>
        </div>
    </div>

    <div class="container">
        <div class="section-header">
            <div class="section-badge proj-animate" data-anim-delay="0">
                <i class="fab fa-github" aria-hidden="true"></i>
                <span>My Work</span>
            </div>
            <h2 class="section-title proj-animate gradient-text-animated" data-anim-delay="100">Featured Projects</h2>
            <p class="section-subtitle proj-animate" data-anim-delay="200">Real projects from my GitHub repositories</p>
        </div>

        <!-- Loading State -->
        <div id="projects-loading" class="projects-loading">
            <div class="loading-spinner"></div>
            <p>Loading projects...</p>
        </div>

        <!-- Projects Grid -->
        <div id="projects-grid" class="projects-grid" style="display: none;"></div>

        <!-- View More -->
        <div class="projects-cta proj-animate" data-anim-delay="700" style="display: none;" id="projects-cta">
            <a href="https://github.com/carlosorbegoso?tab=repositories" target="_blank" class="cta-link">
                <span>View All Projects</span>
                <i class="fab fa-github"></i>
            </a>
        </div>
    </div>
</section>

<style>
    .projects {
        position: relative;
        padding: 6rem 0;
        overflow: hidden;
    }

    .projects-background {
        position: absolute;
        inset: 0;
        pointer-events: none;
    }

    .projects-pattern {
        position: absolute;
        inset: 0;
        background-image:
            radial-gradient(circle at 30% 20%, rgba(100, 181, 246, 0.04) 0%, transparent 50%),
            radial-gradient(circle at 70% 80%, rgba(255, 107, 53, 0.03) 0%, transparent 50%);
    }

    .code-symbols {
        position: absolute;
        inset: 0;
    }

    .code-symbol {
        position: absolute;
        left: var(--x);
        top: var(--y);
        font-family: 'Fira Code', monospace;
        font-size: 1.5rem;
        color: var(--primary-color);
        opacity: 0.15;
        animation: codeFloat 8s ease-in-out infinite;
        animation-delay: var(--delay);
    }

    @keyframes codeFloat {
        0%, 100% { transform: translateY(0) rotate(0deg); opacity: 0.15; }
        50% { transform: translateY(-20px) rotate(10deg); opacity: 0.3; }
    }

    /* Loading State */
    .projects-loading {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 4rem;
        color: var(--text-secondary);
    }

    .loading-spinner {
        width: 50px;
        height: 50px;
        border: 3px solid rgba(100, 181, 246, 0.1);
        border-top-color: var(--primary-color);
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin-bottom: 1rem;
    }

    @keyframes spin { to { transform: rotate(360deg); } }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .project-card {
        position: relative;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(100, 181, 246, 0.1);
        border-radius: 1rem;
        padding: 1.5rem;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .project-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.4s ease;
    }

    .project-card:hover::before {
        transform: scaleX(1);
    }

    .project-card:hover {
        transform: translateY(-10px);
        border-color: rgba(100, 181, 246, 0.3);
        box-shadow: 0 25px 50px rgba(100, 181, 246, 0.15);
    }

    .card-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(100, 181, 246, 0.1) 0%, transparent 50%);
        transform: translate(-50%, -50%);
        opacity: 0;
        transition: opacity 0.4s ease;
        pointer-events: none;
    }

    .project-card:hover .card-glow {
        opacity: 1;
    }

    .project-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
    }

    .project-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, rgba(100, 181, 246, 0.1), rgba(100, 181, 246, 0.05));
        border: 1px solid rgba(100, 181, 246, 0.2);
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        color: var(--primary-color);
        transition: all 0.3s ease;
    }

    .project-card:hover .project-icon {
        transform: rotate(5deg) scale(1.1);
        background: rgba(100, 181, 246, 0.15);
        box-shadow: 0 0 20px rgba(100, 181, 246, 0.3);
    }

    .project-links {
        display: flex;
        gap: 0.5rem;
    }

    .project-link {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(100, 181, 246, 0.05);
        border: 1px solid rgba(100, 181, 246, 0.15);
        border-radius: 0.5rem;
        color: var(--text-secondary);
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .project-link:hover {
        background: var(--primary-color);
        border-color: var(--primary-color);
        color: white;
        transform: translateY(-2px);
    }

    .project-content {
        position: relative;
        z-index: 1;
    }

    .project-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .project-type {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
        flex-wrap: wrap;
    }

    .type-badge {
        padding: 0.25rem 0.5rem;
        background: linear-gradient(135deg, rgba(100, 181, 246, 0.15), rgba(100, 181, 246, 0.1));
        border-radius: 9999px;
        font-size: 0.7rem;
        font-weight: 600;
        color: var(--primary-color);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .lang-badge {
        display: flex;
        align-items: center;
        gap: 0.35rem;
        font-size: 0.8rem;
        color: var(--text-secondary);
        font-weight: 500;
    }

    .lang-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
    }

    .project-description {
        color: var(--text-secondary);
        line-height: 1.6;
        font-size: 0.9rem;
        margin-bottom: 1rem;
        min-height: 3rem;
    }

    .project-stats {
        display: flex;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 0.35rem;
        font-size: 0.8rem;
        color: var(--text-secondary);
    }

    .stat-item i {
        font-size: 0.75rem;
        color: var(--primary-color);
    }

    .stat-item.stars i { color: #fbbf24; }
    .stat-item.forks i { color: #a855f7; }

    .project-topics {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .topic-pill {
        padding: 0.25rem 0.625rem;
        background: rgba(100, 181, 246, 0.08);
        border: 1px solid rgba(100, 181, 246, 0.2);
        border-radius: 9999px;
        font-size: 0.75rem;
        color: var(--primary-color);
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .topic-pill:hover {
        background: rgba(100, 181, 246, 0.15);
        border-color: rgba(100, 181, 246, 0.4);
        transform: translateY(-1px);
    }

    .projects-cta {
        text-align: center;
        margin-top: 3rem;
    }

    .cta-link {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 2rem;
        background: transparent;
        border: 2px solid rgba(100, 181, 246, 0.3);
        border-radius: 50px;
        color: var(--primary-color);
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .cta-link:hover {
        background: var(--primary-color);
        border-color: var(--primary-color);
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(100, 181, 246, 0.3);
    }

    .cta-link i {
        font-size: 1.25rem;
        transition: transform 0.3s ease;
    }

    .cta-link:hover i {
        transform: rotate(360deg);
    }

    /* Animation observer styles */
    .proj-animate {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .proj-animate.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .projects {
            padding: 4rem 0;
        }

        .projects-grid {
            grid-template-columns: 1fr;
            gap: 1.25rem;
        }

        .project-card {
            padding: 1.25rem;
        }

        .project-title {
            font-size: 1.125rem;
        }

        .code-symbol {
            font-size: 1.25rem;
        }
    }

    @media (max-width: 480px) {
        .project-icon {
            width: 40px;
            height: 40px;
            font-size: 1rem;
        }

        .topic-pill {
            font-size: 0.7rem;
            padding: 0.2rem 0.5rem;
        }

        .projects-cta {
            margin-top: 2rem;
        }

        .cta-link {
            padding: 0.75rem 1.5rem;
            font-size: 0.875rem;
        }
    }
</style>

<script>
    import { languageColors } from '../scripts/services/github-api.js';

    const GITHUB_USERNAME = 'carlosorbegoso';

    // Icons for different project types based on language or name
    function getProjectIcon(repo: { name: string; language: string | null; topics: string[] }): string {
        const name = repo.name.toLowerCase();
        const lang = repo.language?.toLowerCase() || '';
        const topics = repo.topics.map(t => t.toLowerCase());

        if (topics.includes('api') || name.includes('api')) return 'fas fa-plug';
        if (topics.includes('mobile') || lang === 'kotlin' || lang === 'swift') return 'fas fa-mobile-alt';
        if (topics.includes('web') || lang === 'javascript' || lang === 'typescript') return 'fas fa-globe';
        if (topics.includes('docker') || topics.includes('kubernetes')) return 'fab fa-docker';
        if (lang === 'java' || topics.includes('spring')) return 'fab fa-java';
        if (lang === 'python') return 'fab fa-python';
        if (name.includes('workflow') || name.includes('ci') || name.includes('cd')) return 'fas fa-cogs';
        if (lang === 'shell') return 'fas fa-terminal';

        return 'fas fa-code';
    }

    // Get badge type based on repo characteristics
    function getProjectType(repo: { name: string; language: string | null; topics: string[] }): string {
        const lang = repo.language?.toLowerCase() || '';
        const topics = repo.topics.map(t => t.toLowerCase());

        if (topics.includes('fullstack')) return 'Full Stack';
        if (topics.includes('frontend') || lang === 'javascript' || lang === 'typescript') return 'Frontend';
        if (topics.includes('backend') || lang === 'java' || lang === 'kotlin' || lang === 'go') return 'Backend';
        if (topics.includes('mobile')) return 'Mobile';
        if (topics.includes('devops') || topics.includes('ci-cd')) return 'DevOps';
        if (lang === 'shell') return 'DevOps';

        return 'Project';
    }

    interface Repository {
        name: string;
        description: string | null;
        html_url: string;
        homepage: string | null;
        language: string | null;
        stargazers_count: number;
        forks_count: number;
        topics: string[];
        fork: boolean;
        updated_at: string;
    }

    async function fetchProjects(): Promise<Repository[]> {
        try {
            const response = await fetch(
                `https://api.github.com/users/${GITHUB_USERNAME}/repos?sort=updated&per_page=30`,
                {
                    headers: { 'Accept': 'application/vnd.github.v3+json' }
                }
            );

            if (!response.ok) throw new Error('Failed to fetch');

            const repos: Repository[] = await response.json();

            // Filter out forks and the portfolio page itself, sort by stars then by update date
            return repos
                .filter(repo => !repo.fork && repo.name !== 'page' && repo.name !== 'carlosorbegoso')
                .sort((a, b) => {
                    // First by stars
                    if (b.stargazers_count !== a.stargazers_count) {
                        return b.stargazers_count - a.stargazers_count;
                    }
                    // Then by update date
                    return new Date(b.updated_at).getTime() - new Date(a.updated_at).getTime();
                })
                .slice(0, 6);
        } catch (error) {
            console.error('Error fetching projects:', error);
            return [];
        }
    }

    function renderProjects(repos: Repository[]): void {
        const grid = document.getElementById('projects-grid');
        const loading = document.getElementById('projects-loading');
        const cta = document.getElementById('projects-cta');

        if (!grid) return;

        if (repos.length === 0) {
            grid.innerHTML = '<p style="text-align: center; color: var(--text-secondary);">No projects found</p>';
            if (loading) loading.style.display = 'none';
            grid.style.display = 'grid';
            return;
        }

        grid.innerHTML = repos.map((repo, index) => {
            const langColor = repo.language
                ? (languageColors as Record<string, string>)[repo.language] || '#8b8b8b'
                : '#8b8b8b';
            const icon = getProjectIcon(repo);
            const type = getProjectType(repo);
            const description = repo.description || 'No description available';
            const delay = 300 + (index * 100);

            return `
                <div class="project-card proj-animate" data-anim-delay="${delay}">
                    <div class="card-glow"></div>
                    <div class="project-header">
                        <div class="project-icon">
                            <i class="${icon}"></i>
                        </div>
                        <div class="project-links">
                            <a href="${repo.html_url}" target="_blank" rel="noopener noreferrer" class="project-link" title="View on GitHub">
                                <i class="fab fa-github"></i>
                            </a>
                            ${repo.homepage ? `
                                <a href="${repo.homepage}" target="_blank" rel="noopener noreferrer" class="project-link" title="Live Demo">
                                    <i class="fas fa-external-link-alt"></i>
                                </a>
                            ` : ''}
                        </div>
                    </div>
                    <div class="project-content">
                        <h3 class="project-title">${repo.name}</h3>
                        <div class="project-type">
                            <span class="type-badge">${type}</span>
                            ${repo.language ? `
                                <span class="lang-badge">
                                    <span class="lang-dot" style="background: ${langColor}"></span>
                                    ${repo.language}
                                </span>
                            ` : ''}
                        </div>
                        <p class="project-description">${description}</p>
                        <div class="project-stats">
                            <span class="stat-item stars">
                                <i class="fas fa-star"></i>
                                ${repo.stargazers_count}
                            </span>
                            <span class="stat-item forks">
                                <i class="fas fa-code-fork"></i>
                                ${repo.forks_count}
                            </span>
                        </div>
                        ${repo.topics.length > 0 ? `
                            <div class="project-topics">
                                ${repo.topics.slice(0, 4).map(topic => `
                                    <span class="topic-pill">${topic}</span>
                                `).join('')}
                            </div>
                        ` : ''}
                    </div>
                </div>
            `;
        }).join('');

        if (loading) loading.style.display = 'none';
        grid.style.display = 'grid';
        if (cta) cta.style.display = 'block';

        // Trigger animations
        setTimeout(() => {
            grid.querySelectorAll('.proj-animate').forEach(el => {
                const delay = parseInt(el.getAttribute('data-anim-delay') || '0');
                setTimeout(() => el.classList.add('visible'), delay);
            });
        }, 100);

        // Add tilt effect
        grid.querySelectorAll('.project-card').forEach(card => {
            card.addEventListener('mousemove', (e: Event) => {
                const mouseEvent = e as MouseEvent;
                const element = card as HTMLElement;
                const rect = element.getBoundingClientRect();
                const x = mouseEvent.clientX - rect.left;
                const y = mouseEvent.clientY - rect.top;
                const centerX = rect.width / 2;
                const centerY = rect.height / 2;
                const rotateX = (y - centerY) / 25;
                const rotateY = (centerX - x) / 25;

                element.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateY(-10px)`;
            });

            card.addEventListener('mouseleave', () => {
                (card as HTMLElement).style.transform = 'perspective(1000px) rotateX(0) rotateY(0) translateY(0)';
            });
        });
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', async () => {
        // Animate header elements
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const delay = parseInt(entry.target.getAttribute('data-anim-delay') || '0');
                    setTimeout(() => {
                        entry.target.classList.add('visible');
                    }, delay);
                }
            });
        }, observerOptions);

        document.querySelectorAll('.section-header .proj-animate').forEach(el => {
            observer.observe(el);
        });

        // Fetch and render projects
        const repos = await fetchProjects();
        renderProjects(repos);
    });
</script>
