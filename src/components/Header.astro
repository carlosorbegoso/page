<header class="header" data-header>
    <div class="nav-brand">
        <div class="brand-icon">
            <i class="fas fa-code"></i>
        </div>
    </div>

    <nav class="nav-links" data-nav-links>
        <a href="#hero" class="nav-link" data-nav-link>
            <i class="fas fa-home nav-icon"></i>
            <span>Home</span>
        </a>
        <a href="#about" class="nav-link" data-nav-link>
            <i class="fas fa-user nav-icon"></i>
            <span>About</span>
        </a>
        <a href="#experience" class="nav-link" data-nav-link>
            <i class="fas fa-briefcase nav-icon"></i>
            <span>Experience</span>
        </a>
        <a href="#skills" class="nav-link" data-nav-link>
            <i class="fas fa-tools nav-icon"></i>
            <span>Skills</span>
        </a>
        <a href="#projects" class="nav-link" data-nav-link>
            <i class="fas fa-project-diagram nav-icon"></i>
            <span>Projects</span>
        </a>
        <a href="#contact" class="nav-link" data-nav-link>
            <i class="fas fa-envelope nav-icon"></i>
            <span>Contact</span>
        </a>
    </nav>

    <div class="nav-controls">
        <button class="theme-toggle" id="theme-toggle" aria-label="Change theme" data-theme-toggle>
            <i class="fas fa-moon theme-icon"></i>
        </button>

        <button class="language-toggle" id="language-toggle" aria-label="Change language">
            <i class="fas fa-globe"></i>
        </button>

        <button class="menu-toggle" id="menu-toggle" aria-label="Mobile menu" data-mobile-toggle>
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
