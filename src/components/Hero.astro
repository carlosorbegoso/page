<script>
    import { getCurrentWeather, getCurrentTime } from '../scripts/services/weather-api.js';

    // Typing effect
    const roles = ['Backend Developer', 'Java Specialist', 'Microservices Expert', 'Cloud Architect'];
    let roleIndex = 0;
    let charIndex = 0;
    let isDeleting = false;
    const typingEl = document.getElementById('typing-text');

    function typeEffect() {
        if (!typingEl) return;

        const currentRole = roles[roleIndex];

        if (isDeleting) {
            typingEl.textContent = currentRole.substring(0, charIndex - 1);
            charIndex--;
        } else {
            typingEl.textContent = currentRole.substring(0, charIndex + 1);
            charIndex++;
        }

        let typeSpeed = isDeleting ? 50 : 100;

        if (!isDeleting && charIndex === currentRole.length) {
            typeSpeed = 2000; // Pause at end
            isDeleting = true;
        } else if (isDeleting && charIndex === 0) {
            isDeleting = false;
            roleIndex = (roleIndex + 1) % roles.length;
            typeSpeed = 500; // Pause before next word
        }

        setTimeout(typeEffect, typeSpeed);
    }

    // Animate numbers
    function animateNumbers() {
        const statNumbers = document.querySelectorAll('.stat-number[data-count]');
        statNumbers.forEach(el => {
            const target = parseInt(el.getAttribute('data-count') || '0');
            const duration = 2000;
            const start = performance.now();

            function update(now: number) {
                const progress = Math.min((now - start) / duration, 1);
                const ease = 1 - Math.pow(1 - progress, 3);
                el.textContent = Math.floor(target * ease).toString();
                if (progress < 1) requestAnimationFrame(update);
                else el.textContent = target.toString();
            }
            requestAnimationFrame(update);
        });
    }

    // Update weather data
    async function updateWeather() {
        try {
            const weather = await getCurrentWeather();

            if (weather) {
                // Update Hero badge
                const heroTempEl = document.getElementById('hero-temp');
                const heroIconEl = document.getElementById('hero-weather-icon');

                if (heroTempEl) {
                    heroTempEl.textContent = `${weather.temperature}掳C`;
                }

                if (heroIconEl) {
                    heroIconEl.className = `fas ${weather.icon}`;
                    // Color based on weather
                    if (weather.icon.includes('sun')) {
                        heroIconEl.style.color = '#fbbf24';
                    } else if (weather.icon.includes('cloud')) {
                        heroIconEl.style.color = '#94a3b8';
                    } else if (weather.icon.includes('rain') || weather.icon.includes('bolt')) {
                        heroIconEl.style.color = '#60a5fa';
                    } else if (weather.icon.includes('moon')) {
                        heroIconEl.style.color = '#a78bfa';
                    } else {
                        heroIconEl.style.color = '#fbbf24';
                    }
                }

                // Add tooltip with weather details
                const locationBadge = document.getElementById('location-badge');
                if (locationBadge) {
                    locationBadge.setAttribute('data-tooltip',
                        `${weather.description} 路 Feels like ${weather.feelsLike}掳C 路 ${weather.humidity}% humidity`
                    );
                }

                // Update Header weather button
                const headerTempEl = document.getElementById('header-temp');
                const headerIconEl = document.getElementById('weather-icon');
                const weatherBtn = document.querySelector('.weather-btn');

                if (headerTempEl && headerIconEl && weatherBtn) {
                    headerTempEl.textContent = `${weather.temperature}掳`;
                    headerIconEl.className = `fas ${weather.icon} theme-icon`;
                    weatherBtn.classList.add('has-weather');
                }
            }
        } catch (error) {
            console.log('Weather API unavailable');
        }
    }

    // Update time display
    function updateTime() {
        const timeEl = document.getElementById('header-time');
        if (timeEl) {
            const time = getCurrentTime();
            if (time) {
                timeEl.textContent = time;
            }
        }
    }

    // Initialize
    setTimeout(typeEffect, 1500); // Start typing after animations
    setTimeout(animateNumbers, 1200); // Animate numbers
    updateWeather();
    updateTime();

    // Update time every minute
    setInterval(updateTime, 60000);

    // Update weather every 15 minutes
    setInterval(updateWeather, 15 * 60 * 1000);
</script>
