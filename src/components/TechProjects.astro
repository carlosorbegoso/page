---
// Tech & Projects - Unified section combining Skills, GitHub Stats, and Projects
---

<section id="tech" class="tech-section section section-bg">
    <div class="container">
        <!-- Header -->
        <div class="section-header">
            <div class="section-badge animate-item" data-delay="0">
                <i class="fas fa-code"></i>
                <span>Tech & Projects</span>
            </div>
            <h2 class="section-title animate-item" data-delay="100">
                <span class="title-gradient">What I Build</span>
            </h2>
            <p class="section-subtitle animate-item" data-delay="200">
                Technologies I work with and projects I've created
            </p>
        </div>

        <!-- Loading State -->
        <div id="tech-loading" class="loading-state">
            <div class="loading-spinner"></div>
            <p>Loading data...</p>
        </div>

        <!-- Main Content -->
        <div id="tech-content" class="tech-content" style="display: none;">

            <!-- Stats Row -->
            <div class="stats-row animate-item" data-delay="300">
                <div class="stat-card">
                    <i class="fas fa-folder-open"></i>
                    <span class="stat-value" id="stat-repos">0</span>
                    <span class="stat-label">Repositories</span>
                </div>
                <div class="stat-card">
                    <i class="fas fa-star"></i>
                    <span class="stat-value" id="stat-stars">0</span>
                    <span class="stat-label">Stars</span>
                </div>
                <div class="stat-card">
                    <i class="fas fa-users"></i>
                    <span class="stat-value" id="stat-followers">0</span>
                    <span class="stat-label">Followers</span>
                </div>
                <div class="stat-card">
                    <i class="fas fa-calendar-alt"></i>
                    <span class="stat-value" id="stat-years">0</span>
                    <span class="stat-label">Years on GitHub</span>
                </div>
            </div>

            <!-- Two Column Layout: Languages + Tech Stack -->
            <div class="two-columns animate-item" data-delay="400">
                <!-- Languages from GitHub -->
                <div class="column-card">
                    <h3 class="card-title">
                        <i class="fas fa-chart-pie"></i>
                        Top Languages
                    </h3>
                    <div id="languages-list" class="languages-list"></div>
                    <div id="languages-bar" class="languages-bar"></div>
                </div>

                <!-- Tech Stack -->
                <div class="column-card">
                    <h3 class="card-title">
                        <i class="fas fa-layer-group"></i>
                        Tech Stack
                    </h3>
                    <div class="tech-stack">
                        <div class="tech-category">
                            <span class="category-label">Backend</span>
                            <div class="tech-tags">
                                <span class="tech-tag">Java 17+</span>
                                <span class="tech-tag">Spring Boot</span>
                                <span class="tech-tag">Quarkus</span>
                                <span class="tech-tag">Microservices</span>
                            </div>
                        </div>
                        <div class="tech-category">
                            <span class="category-label">DevOps</span>
                            <div class="tech-tags">
                                <span class="tech-tag">Docker</span>
                                <span class="tech-tag">Kubernetes</span>
                                <span class="tech-tag">AWS</span>
                                <span class="tech-tag">CI/CD</span>
                            </div>
                        </div>
                        <div class="tech-category">
                            <span class="category-label">Database</span>
                            <div class="tech-tags">
                                <span class="tech-tag">PostgreSQL</span>
                                <span class="tech-tag">MongoDB</span>
                                <span class="tech-tag">Redis</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Projects Grid -->
            <div class="projects-section animate-item" data-delay="500">
                <h3 class="section-subtitle-small">
                    <i class="fas fa-rocket"></i>
                    Featured Projects
                </h3>
                <div id="projects-grid" class="projects-grid"></div>
                <a href="https://github.com/carlosorbegoso?tab=repositories" target="_blank" rel="noopener noreferrer" class="view-all-btn">
                    <span>View All on GitHub</span>
                    <i class="fas fa-external-link-alt"></i>
                </a>
            </div>

            <!-- Contribution Graph -->
            <div class="contributions-section animate-item" data-delay="600">
                <div class="contributions-header">
                    <h3 class="section-subtitle-small">
                        <i class="fas fa-chart-line"></i>
                        Contributions
                    </h3>
                    <span class="streak-badge" id="streak-badge">
                        <i class="fas fa-fire"></i>
                        <span id="current-streak">0</span> day streak
                    </span>
                </div>
                <div id="contribution-graph" class="contribution-graph"></div>
                <div class="contribution-legend">
                    <span>Less</span>
                    <div class="legend-squares">
                        <span class="legend-square level-0"></span>
                        <span class="legend-square level-1"></span>
                        <span class="legend-square level-2"></span>
                        <span class="legend-square level-3"></span>
                        <span class="legend-square level-4"></span>
                    </div>
                    <span>More</span>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .tech-section {
        padding: 6rem 0;
        position: relative;
    }

    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(0, 255, 255, 0.05);
        border: 1px solid rgba(0, 255, 255, 0.3);
        border-radius: 50px;
        margin-bottom: 1rem;
        font-size: 0.85rem;
        color: #00ffff;
        box-shadow: 0 0 15px rgba(0, 255, 255, 0.2), inset 0 0 15px rgba(0, 255, 255, 0.05);
        animation: badge-pulse 3s ease-in-out infinite;
    }

    @keyframes badge-pulse {
        0%, 100% { box-shadow: 0 0 15px rgba(0, 255, 255, 0.2), inset 0 0 15px rgba(0, 255, 255, 0.05); }
        50% { box-shadow: 0 0 25px rgba(0, 255, 255, 0.4), inset 0 0 20px rgba(0, 255, 255, 0.1); }
    }

    .section-badge i {
        color: #00ffff;
        text-shadow: 0 0 10px #00ffff;
    }

    .section-title {
        font-size: clamp(2rem, 5vw, 3rem);
        font-weight: 800;
        margin-bottom: 0.75rem;
    }

    .title-gradient {
        background: linear-gradient(135deg, #fff 0%, #00ffff 40%, #ff00ff 70%, #00ffff 100%);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: gradient-shift 4s ease infinite;
        text-shadow: none;
        filter: drop-shadow(0 0 20px rgba(0, 255, 255, 0.3));
    }

    @keyframes gradient-shift {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    .section-subtitle {
        color: var(--text-secondary);
        font-size: 1.1rem;
    }

    /* Loading */
    .loading-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 4rem;
        color: var(--text-secondary);
    }

    .loading-spinner {
        width: 40px;
        height: 40px;
        border: 3px solid rgba(0, 255, 255, 0.1);
        border-top-color: #00ffff;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin-bottom: 1rem;
        box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
    }

    @keyframes spin { to { transform: rotate(360deg); } }

    /* Content */
    .tech-content {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        max-width: 1100px;
        margin: 0 auto;
    }

    /* Stats Row */
    .stats-row {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
    }

    @media (max-width: 768px) {
        .stats-row {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    .stat-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        padding: 1.5rem 1.25rem;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.03) 0%, rgba(255, 0, 255, 0.02) 100%);
        border: 1px solid transparent;
        border-radius: 1rem;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        transform-style: preserve-3d;
        perspective: 1000px;
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(10px);
    }

    .stat-card::before {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 1rem;
        padding: 1px;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.5), rgba(255, 0, 255, 0.3), rgba(0, 255, 255, 0.5));
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        pointer-events: none;
    }

    .stat-card::after {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(45deg, transparent 40%, rgba(0, 255, 255, 0.1) 50%, transparent 60%);
        transform: rotate(45deg);
        animation: stat-shine 3s ease-in-out infinite;
        pointer-events: none;
    }

    @keyframes stat-shine {
        0%, 100% { transform: translateX(-100%) rotate(45deg); }
        50% { transform: translateX(100%) rotate(45deg); }
    }

    .stat-card:hover {
        transform: translateY(-8px) rotateX(8deg) scale(1.02);
        box-shadow:
            0 25px 50px rgba(0, 0, 0, 0.4),
            0 0 40px rgba(0, 255, 255, 0.2),
            inset 0 0 30px rgba(0, 255, 255, 0.05);
    }

    .stat-card:hover::before {
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.8), rgba(255, 0, 255, 0.5), rgba(0, 255, 255, 0.8));
    }

    .stat-card i {
        font-size: 1.5rem;
        color: #00ffff;
        text-shadow: 0 0 15px #00ffff;
        filter: drop-shadow(0 0 5px #00ffff);
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 800;
        background: linear-gradient(135deg, #fff, #00ffff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        filter: drop-shadow(0 0 10px rgba(0, 255, 255, 0.5));
    }

    .stat-label {
        font-size: 0.7rem;
        color: rgba(0, 255, 255, 0.7);
        text-transform: uppercase;
        letter-spacing: 0.15em;
        font-weight: 600;
    }

    /* Two Columns */
    .two-columns {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    @media (max-width: 768px) {
        .two-columns {
            grid-template-columns: 1fr;
        }
    }

    .column-card {
        padding: 1.5rem;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.02) 0%, rgba(255, 0, 255, 0.01) 50%, rgba(0, 255, 255, 0.02) 100%);
        border: 1px solid transparent;
        border-radius: 1rem;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(10px);
    }

    .column-card::before {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 1rem;
        padding: 1px;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.4), rgba(255, 0, 255, 0.2), rgba(0, 255, 255, 0.4));
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        pointer-events: none;
    }

    /* Scanning line effect */
    .column-card::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(90deg, transparent, #00ffff, transparent);
        animation: scan-line 2s linear infinite;
        opacity: 0.6;
    }

    @keyframes scan-line {
        0% { top: 0; opacity: 0.6; }
        50% { opacity: 1; }
        100% { top: 100%; opacity: 0.6; }
    }

    .column-card:hover {
        transform: translateY(-5px);
        box-shadow:
            0 20px 40px rgba(0, 0, 0, 0.3),
            0 0 30px rgba(0, 255, 255, 0.15),
            inset 0 0 20px rgba(0, 255, 255, 0.03);
    }

    .column-card:hover::before {
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.7), rgba(255, 0, 255, 0.4), rgba(0, 255, 255, 0.7));
    }

    .card-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 1rem;
        position: relative;
        z-index: 1;
    }

    .card-title i {
        color: #00ffff;
        text-shadow: 0 0 10px #00ffff;
    }

    /* Languages */
    .languages-list {
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
        margin-bottom: 1rem;
        position: relative;
        z-index: 1;
    }

    .language-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.4rem 0.6rem;
        background: rgba(0, 255, 255, 0.03);
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

    .language-item:hover {
        background: rgba(0, 255, 255, 0.08);
        transform: translateX(5px);
    }

    .lang-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        box-shadow: 0 0 8px currentColor;
    }

    .lang-name {
        flex: 1;
        font-size: 0.85rem;
        color: var(--text-primary);
    }

    .lang-percent {
        font-size: 0.8rem;
        color: #00ffff;
        font-weight: 600;
        text-shadow: 0 0 5px rgba(0, 255, 255, 0.5);
    }

    .languages-bar {
        display: flex;
        height: 6px;
        border-radius: 3px;
        overflow: hidden;
        background: rgba(0, 255, 255, 0.1);
        position: relative;
        z-index: 1;
        box-shadow: 0 0 10px rgba(0, 255, 255, 0.2);
    }

    .lang-bar-segment {
        height: 100%;
        box-shadow: 0 0 8px currentColor;
    }

    /* Tech Stack */
    .tech-stack {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        position: relative;
        z-index: 1;
    }

    .tech-category {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .category-label {
        font-size: 0.65rem;
        color: #ff00ff;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        font-weight: 600;
        text-shadow: 0 0 8px rgba(255, 0, 255, 0.5);
    }

    .tech-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tech-tag {
        padding: 0.4rem 0.85rem;
        background: rgba(0, 255, 255, 0.05);
        border: 1px solid rgba(0, 255, 255, 0.3);
        border-radius: 50px;
        font-size: 0.75rem;
        color: #00ffff;
        font-weight: 500;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .tech-tag::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        background: radial-gradient(circle, rgba(0, 255, 255, 0.3) 0%, transparent 70%);
        transform: translate(-50%, -50%);
        transition: all 0.4s ease;
        border-radius: 50%;
    }

    .tech-tag:hover {
        background: rgba(0, 255, 255, 0.1);
        border-color: #00ffff;
        box-shadow: 0 0 15px rgba(0, 255, 255, 0.3), inset 0 0 10px rgba(0, 255, 255, 0.1);
        transform: translateY(-2px);
    }

    .tech-tag:hover::before {
        width: 150%;
        height: 150%;
    }

    /* Projects */
    .projects-section {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .section-subtitle-small {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    .section-subtitle-small i {
        color: #ff00ff;
        text-shadow: 0 0 10px #ff00ff;
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1rem;
    }

    .project-card {
        padding: 1.25rem;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.02) 0%, rgba(255, 0, 255, 0.01) 100%);
        border: 1px solid transparent;
        border-radius: 1rem;
        text-decoration: none;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        transform-style: preserve-3d;
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(10px);
    }

    .project-card::before {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 1rem;
        padding: 1px;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.4), rgba(255, 0, 255, 0.2), rgba(0, 255, 255, 0.4));
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        pointer-events: none;
        transition: all 0.4s ease;
    }

    /* Holographic shimmer */
    .project-card::after {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg,
            transparent 0%,
            rgba(0, 255, 255, 0.05) 25%,
            rgba(255, 0, 255, 0.08) 50%,
            rgba(0, 255, 255, 0.05) 75%,
            transparent 100%
        );
        transition: left 0.6s ease;
    }

    .project-card:hover::after {
        left: 100%;
    }

    .project-card:hover {
        transform: translateY(-10px) rotateX(5deg) rotateY(-3deg) scale(1.02);
        box-shadow:
            0 30px 60px rgba(0, 0, 0, 0.4),
            0 0 50px rgba(0, 255, 255, 0.15),
            0 0 100px rgba(255, 0, 255, 0.1),
            inset 0 0 30px rgba(0, 255, 255, 0.05);
    }

    .project-card:hover::before {
        background: linear-gradient(135deg, #00ffff, #ff00ff, #00ffff);
    }

    .project-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 0.75rem;
        position: relative;
        z-index: 1;
    }

    .project-name {
        font-size: 1rem;
        font-weight: 600;
        background: linear-gradient(135deg, #00ffff, #fff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        filter: drop-shadow(0 0 5px rgba(0, 255, 255, 0.5));
    }

    .project-icon {
        color: rgba(0, 255, 255, 0.6);
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .project-card:hover .project-icon {
        color: #00ffff;
        text-shadow: 0 0 10px #00ffff;
        transform: translate(3px, -3px);
    }

    .project-desc {
        font-size: 0.85rem;
        color: var(--text-secondary);
        line-height: 1.5;
        margin-bottom: 0.75rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        position: relative;
        z-index: 1;
    }

    .project-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 0.75rem;
        color: var(--text-secondary);
        position: relative;
        z-index: 1;
    }

    .project-lang {
        display: flex;
        align-items: center;
        gap: 0.3rem;
    }

    .project-stat {
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .project-stat i {
        font-size: 0.7rem;
        color: #fbbf24;
    }

    .view-all-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        align-self: center;
        padding: 0.85rem 2rem;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.1) 0%, rgba(255, 0, 255, 0.05) 100%);
        border: 1px solid rgba(0, 255, 255, 0.4);
        border-radius: 50px;
        color: #00ffff;
        font-size: 0.875rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }

    .view-all-btn::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.2), rgba(255, 0, 255, 0.1));
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .view-all-btn:hover {
        border-color: #00ffff;
        box-shadow: 0 0 25px rgba(0, 255, 255, 0.4), inset 0 0 15px rgba(0, 255, 255, 0.1);
        transform: translateY(-2px);
    }

    .view-all-btn:hover::before {
        opacity: 1;
    }

    .view-all-btn span,
    .view-all-btn i {
        position: relative;
        z-index: 1;
    }

    /* Contributions */
    .contributions-section {
        padding: 1.5rem;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.02) 0%, rgba(255, 0, 255, 0.01) 100%);
        border: 1px solid transparent;
        border-radius: 1rem;
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(10px);
    }

    .contributions-section::before {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 1rem;
        padding: 1px;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.4), rgba(255, 0, 255, 0.2), rgba(0, 255, 255, 0.4));
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        pointer-events: none;
    }

    .contributions-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        position: relative;
        z-index: 1;
    }

    .streak-badge {
        display: flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.4rem 0.85rem;
        background: linear-gradient(135deg, rgba(251, 191, 36, 0.15) 0%, rgba(255, 100, 50, 0.1) 100%);
        border: 1px solid rgba(251, 191, 36, 0.5);
        border-radius: 50px;
        font-size: 0.75rem;
        color: #fbbf24;
        font-weight: 600;
        box-shadow: 0 0 15px rgba(251, 191, 36, 0.2);
    }

    .streak-badge i {
        animation: fire-pulse 1s ease-in-out infinite;
    }

    @keyframes fire-pulse {
        0%, 100% { transform: scale(1); filter: drop-shadow(0 0 3px #fbbf24); }
        50% { transform: scale(1.2); filter: drop-shadow(0 0 8px #ff6600); }
    }

    .contribution-graph {
        display: grid;
        grid-template-columns: repeat(52, 1fr);
        gap: 3px;
        margin-bottom: 0.75rem;
        position: relative;
        z-index: 1;
    }

    .contribution-week {
        display: flex;
        flex-direction: column;
        gap: 3px;
    }

    .contribution-day {
        width: 100%;
        aspect-ratio: 1;
        border-radius: 2px;
        transition: all 0.2s ease;
    }

    .contribution-day:hover {
        transform: scale(1.8);
        box-shadow: 0 0 10px currentColor;
        z-index: 10;
    }

    .contribution-day.level-0 { background: rgba(0, 255, 255, 0.05); }
    .contribution-day.level-1 { background: rgba(0, 255, 255, 0.2); box-shadow: 0 0 3px rgba(0, 255, 255, 0.3); }
    .contribution-day.level-2 { background: rgba(0, 255, 255, 0.4); box-shadow: 0 0 5px rgba(0, 255, 255, 0.4); }
    .contribution-day.level-3 { background: rgba(0, 255, 255, 0.65); box-shadow: 0 0 8px rgba(0, 255, 255, 0.5); }
    .contribution-day.level-4 { background: #00ffff; box-shadow: 0 0 12px #00ffff; }

    .contribution-legend {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        gap: 0.5rem;
        font-size: 0.65rem;
        color: var(--text-secondary);
        position: relative;
        z-index: 1;
    }

    .legend-squares {
        display: flex;
        gap: 3px;
    }

    .legend-square {
        width: 10px;
        height: 10px;
        border-radius: 2px;
    }

    .legend-square.level-0 { background: rgba(0, 255, 255, 0.05); }
    .legend-square.level-1 { background: rgba(0, 255, 255, 0.2); }
    .legend-square.level-2 { background: rgba(0, 255, 255, 0.4); }
    .legend-square.level-3 { background: rgba(0, 255, 255, 0.65); }
    .legend-square.level-4 { background: #00ffff; box-shadow: 0 0 5px #00ffff; }

    /* Animations */
    .animate-item {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .animate-item.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .tech-section {
            padding: 4rem 0;
        }

        .contribution-graph {
            grid-template-columns: repeat(26, 1fr);
        }
    }

    @media (max-width: 480px) {
        .contribution-graph {
            grid-template-columns: repeat(13, 1fr);
