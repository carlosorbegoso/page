---
// Tech & Projects - Premium holographic section combining Skills, GitHub Stats, and Projects
---

<section id="tech" class="tech-section section section-bg">
    <!-- Holographic Background -->
    <div class="tech-bg">
        <div class="tech-grid-pattern"></div>
        <div class="tech-glow-orb orb-1"></div>
        <div class="tech-glow-orb orb-2"></div>
        <div class="tech-glow-orb orb-3"></div>
        <div class="tech-particles">
            <span class="t-particle" style="--x: 10%; --y: 20%; --d: 0s;"></span>
            <span class="t-particle" style="--x: 85%; --y: 15%; --d: 1s;"></span>
            <span class="t-particle" style="--x: 25%; --y: 80%; --d: 2s;"></span>
            <span class="t-particle" style="--x: 70%; --y: 75%; --d: 3s;"></span>
            <span class="t-particle" style="--x: 50%; --y: 40%; --d: 1.5s;"></span>
            <span class="t-particle" style="--x: 90%; --y: 60%; --d: 2.5s;"></span>
        </div>
    </div>

    <div class="container">
        <!-- Header -->
        <div class="section-header">
            <div class="section-badge animate-item" data-delay="0">
                <div class="badge-icon">
                    <i class="fas fa-terminal"></i>
                </div>
                <span>Tech & Projects</span>
                <div class="badge-pulse"></div>
            </div>
            <h2 class="section-title animate-item" data-delay="100">
                <span class="title-line">What I</span>
                <span class="title-gradient">Build</span>
            </h2>
            <p class="section-subtitle animate-item" data-delay="200">
                Technologies I master and projects I've crafted
            </p>
        </div>

        <!-- Loading State -->
        <div id="tech-loading" class="loading-state">
            <div class="loading-cube">
                <div class="cube-face face-front"></div>
                <div class="cube-face face-back"></div>
                <div class="cube-face face-left"></div>
                <div class="cube-face face-right"></div>
                <div class="cube-face face-top"></div>
                <div class="cube-face face-bottom"></div>
            </div>
            <p class="loading-text">Fetching data<span class="loading-dots"></span></p>
        </div>

        <!-- Main Content -->
        <div id="tech-content" class="tech-content" style="display: none;">

            <!-- Stats Row - Premium Cards -->
            <div class="stats-row animate-item" data-delay="300">
                <div class="stat-card" data-stat="repos">
                    <div class="stat-icon-wrapper">
                        <div class="stat-icon-bg"></div>
                        <i class="fas fa-folder-open"></i>
                    </div>
                    <div class="stat-info">
                        <span class="stat-value" id="stat-repos">0</span>
                        <span class="stat-label">Repositories</span>
                    </div>
                    <div class="stat-glow"></div>
                </div>
                <div class="stat-card" data-stat="stars">
                    <div class="stat-icon-wrapper">
                        <div class="stat-icon-bg"></div>
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="stat-info">
                        <span class="stat-value" id="stat-stars">0</span>
                        <span class="stat-label">Stars</span>
                    </div>
                    <div class="stat-glow"></div>
                </div>
                <div class="stat-card" data-stat="followers">
                    <div class="stat-icon-wrapper">
                        <div class="stat-icon-bg"></div>
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-info">
                        <span class="stat-value" id="stat-followers">0</span>
                        <span class="stat-label">Followers</span>
                    </div>
                    <div class="stat-glow"></div>
                </div>
                <div class="stat-card" data-stat="years">
                    <div class="stat-icon-wrapper">
                        <div class="stat-icon-bg"></div>
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div class="stat-info">
                        <span class="stat-value" id="stat-years">0</span>
                        <span class="stat-label">Years on GitHub</span>
                    </div>
                    <div class="stat-glow"></div>
                </div>
            </div>

            <!-- Two Column Layout -->
            <div class="two-columns animate-item" data-delay="400">
                <!-- Languages Card -->
                <div class="column-card languages-card">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-chart-pie"></i>
                        </div>
                        <h3 class="card-title">Top Languages</h3>
                        <div class="card-decoration"></div>
                    </div>
                    <div id="languages-list" class="languages-list"></div>
                    <div class="languages-bar-container">
                        <div id="languages-bar" class="languages-bar"></div>
                        <div class="bar-glow"></div>
                    </div>
                </div>

                <!-- Tech Stack Card -->
                <div class="column-card stack-card">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-layer-group"></i>
                        </div>
                        <h3 class="card-title">Tech Stack</h3>
                        <div class="card-decoration"></div>
                    </div>
                    <div class="tech-stack">
                        <div class="tech-category">
                            <div class="category-header">
                                <span class="category-icon"><i class="fas fa-server"></i></span>
                                <span class="category-label">Backend</span>
                            </div>
                            <div class="tech-tags">
                                <span class="tech-tag" data-tech="java"><i class="fab fa-java"></i>Java 17+</span>
                                <span class="tech-tag" data-tech="spring"><i class="fas fa-leaf"></i>Spring Boot</span>
                                <span class="tech-tag" data-tech="quarkus"><i class="fas fa-bolt"></i>Quarkus</span>
                                <span class="tech-tag" data-tech="micro"><i class="fas fa-cubes"></i>Microservices</span>
                            </div>
                        </div>
                        <div class="tech-category">
                            <div class="category-header">
                                <span class="category-icon"><i class="fas fa-cloud"></i></span>
                                <span class="category-label">DevOps</span>
                            </div>
                            <div class="tech-tags">
                                <span class="tech-tag" data-tech="docker"><i class="fab fa-docker"></i>Docker</span>
                                <span class="tech-tag" data-tech="k8s"><i class="fas fa-dharmachakra"></i>Kubernetes</span>
                                <span class="tech-tag" data-tech="aws"><i class="fab fa-aws"></i>AWS</span>
                                <span class="tech-tag" data-tech="cicd"><i class="fas fa-sync-alt"></i>CI/CD</span>
                            </div>
                        </div>
                        <div class="tech-category">
                            <div class="category-header">
                                <span class="category-icon"><i class="fas fa-database"></i></span>
                                <span class="category-label">Database</span>
                            </div>
                            <div class="tech-tags">
                                <span class="tech-tag" data-tech="postgres"><i class="fas fa-database"></i>PostgreSQL</span>
                                <span class="tech-tag" data-tech="mongo"><i class="fas fa-leaf"></i>MongoDB</span>
                                <span class="tech-tag" data-tech="redis"><i class="fas fa-bolt"></i>Redis</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Projects Grid -->
            <div class="projects-section animate-item" data-delay="500">
                <div class="section-header-small">
                    <div class="header-line"></div>
                    <h3>
                        <i class="fas fa-rocket"></i>
                        Featured Projects
                    </h3>
                    <div class="header-line"></div>
                </div>
                <div id="projects-grid" class="projects-grid"></div>
                <a href="https://github.com/carlosorbegoso?tab=repositories" target="_blank" rel="noopener noreferrer" class="view-all-btn">
                    <span class="btn-bg"></span>
                    <span class="btn-content">
                        <span>View All on GitHub</span>
                        <i class="fas fa-arrow-right"></i>
                    </span>
                </a>
            </div>

            <!-- Contribution Graph -->
            <div class="contributions-section animate-item" data-delay="600">
                <div class="contributions-header">
                    <h3>
                        <i class="fas fa-fire-alt"></i>
                        Activity
                    </h3>
                    <div class="streak-badge" id="streak-badge">
                        <div class="streak-fire">
                            <i class="fas fa-fire"></i>
                        </div>
                        <span id="current-streak">0</span>
                        <span class="streak-label">day streak</span>
                    </div>
                </div>
                <div id="contribution-graph" class="contribution-graph"></div>
                <div class="contribution-legend">
                    <span>Less</span>
                    <div class="legend-squares">
                        <span class="legend-square level-0"></span>
                        <span class="legend-square level-1"></span>
                        <span class="legend-square level-2"></span>
                        <span class="legend-square level-3"></span>
                        <span class="legend-square level-4"></span>
                    </div>
                    <span>More</span>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .tech-section {
        padding: 6rem 0;
        position: relative;
        overflow: hidden;
    }

    /* Background Effects */
    .tech-bg {
        position: absolute;
        inset: 0;
        pointer-events: none;
        overflow: hidden;
    }

    .tech-grid-pattern {
        position: absolute;
        inset: 0;
        background-image:
            linear-gradient(rgba(0, 255, 255, 0.03) 1px, transparent 1px),
            linear-gradient(90deg, rgba(0, 255, 255, 0.03) 1px, transparent 1px);
        background-size: 50px 50px;
        mask-image: radial-gradient(ellipse at center, black 30%, transparent 80%);
    }

    .tech-glow-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.4;
        animation: orb-float 20s ease-in-out infinite;
    }

    .orb-1 {
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, rgba(0, 255, 255, 0.3) 0%, transparent 70%);
        top: -10%;
        left: -5%;
        animation-delay: 0s;
    }

    .orb-2 {
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(255, 0, 255, 0.25) 0%, transparent 70%);
        bottom: 10%;
        right: -5%;
        animation-delay: -7s;
    }

    .orb-3 {
        width: 250px;
        height: 250px;
        background: radial-gradient(circle, rgba(0, 255, 255, 0.2) 0%, transparent 70%);
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        animation-delay: -14s;
    }

    @keyframes orb-float {
        0%, 100% { transform: translate(0, 0) scale(1); }
        25% { transform: translate(30px, -30px) scale(1.1); }
        50% { transform: translate(-20px, 20px) scale(0.95); }
        75% { transform: translate(20px, 30px) scale(1.05); }
    }

    .tech-particles {
        position: absolute;
        inset: 0;
    }

    .t-particle {
        position: absolute;
        left: var(--x);
        top: var(--y);
        width: 4px;
        height: 4px;
        background: #00ffff;
        border-radius: 50%;
        box-shadow: 0 0 10px #00ffff, 0 0 20px #00ffff;
        animation: particle-pulse 4s ease-in-out infinite;
        animation-delay: var(--d);
    }

    @keyframes particle-pulse {
        0%, 100% { opacity: 0.3; transform: scale(1); }
        50% { opacity: 0.8; transform: scale(1.5); }
    }

    /* Header */
    .section-header {
        text-align: center;
        margin-bottom: 4rem;
        position: relative;
        z-index: 1;
    }

    .section-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.6rem 1.25rem;
        background: rgba(0, 0, 0, 0.4);
        border: 1px solid rgba(0, 255, 255, 0.3);
        border-radius: 50px;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
        color: #00ffff;
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(10px);
    }

    .badge-icon {
        width: 28px;
        height: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.2), rgba(255, 0, 255, 0.1));
        border-radius: 50%;
    }

    .badge-icon i {
        font-size: 0.8rem;
        color: #00ffff;
        text-shadow: 0 0 10px #00ffff;
    }

    .badge-pulse {
        position: absolute;
        inset: -2px;
        border-radius: 50px;
        border: 2px solid rgba(0, 255, 255, 0.5);
        animation: badge-pulse-anim 2s ease-out infinite;
    }

    @keyframes badge-pulse-anim {
        0% { transform: scale(1); opacity: 1; }
        100% { transform: scale(1.2); opacity: 0; }
    }

    .section-title {
        font-size: clamp(2.5rem, 6vw, 4rem);
        font-weight: 800;
        margin-bottom: 1rem;
        line-height: 1.1;
    }

    .title-line {
        display: block;
        color: var(--text-primary);
        font-weight: 300;
        font-size: 0.5em;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        margin-bottom: 0.25rem;
    }

    .title-gradient {
        background: linear-gradient(135deg, #00ffff 0%, #ff00ff 50%, #00ffff 100%);
        background-size: 200% auto;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: gradient-flow 3s linear infinite;
        filter: drop-shadow(0 0 30px rgba(0, 255, 255, 0.5));
    }

    @keyframes gradient-flow {
        0% { background-position: 0% center; }
        100% { background-position: 200% center; }
    }

    .section-subtitle {
        color: var(--text-secondary);
        font-size: 1.15rem;
        max-width: 500px;
        margin: 0 auto;
    }

    /* Loading */
    .loading-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 5rem;
        gap: 2rem;
    }

    .loading-cube {
        width: 50px;
        height: 50px;
        position: relative;
        transform-style: preserve-3d;
        animation: cube-rotate 2s linear infinite;
    }

    @keyframes cube-rotate {
        0% { transform: rotateX(0) rotateY(0); }
        100% { transform: rotateX(360deg) rotateY(360deg); }
    }

    .cube-face {
        position: absolute;
        width: 50px;
        height: 50px;
        border: 2px solid #00ffff;
        background: rgba(0, 255, 255, 0.1);
        box-shadow: inset 0 0 20px rgba(0, 255, 255, 0.2);
    }

    .face-front { transform: translateZ(25px); }
    .face-back { transform: rotateY(180deg) translateZ(25px); }
    .face-left { transform: rotateY(-90deg) translateZ(25px); }
    .face-right { transform: rotateY(90deg) translateZ(25px); }
    .face-top { transform: rotateX(90deg) translateZ(25px); }
    .face-bottom { transform: rotateX(-90deg) translateZ(25px); }

    .loading-text {
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .loading-dots::after {
        content: '';
        animation: loading-dots 1.5s infinite;
    }

    @keyframes loading-dots {
        0% { content: ''; }
        25% { content: '.'; }
        50% { content: '..'; }
        75% { content: '...'; }
    }

    /* Content */
    .tech-content {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
        max-width: 1200px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    /* Stats Row */
    .stats-row {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.25rem;
    }

    @media (max-width: 900px) {
        .stats-row { grid-template-columns: repeat(2, 1fr); }
    }

    @media (max-width: 480px) {
        .stats-row { grid-template-columns: 1fr; }
    }

    .stat-card {
        position: relative;
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.5rem;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 1rem;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: default;
        backdrop-filter: blur(10px);
    }

    .stat-card::before {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 1rem;
        padding: 1px;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.5), rgba(255, 0, 255, 0.3));
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        mask-composite: exclude;
        pointer-events: none;
    }

    .stat-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4), 0 0 30px rgba(0, 255, 255, 0.2);
    }

    .stat-card:hover::before {
        background: linear-gradient(135deg, #00ffff, #ff00ff);
    }

    .stat-icon-wrapper {
        position: relative;
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .stat-icon-bg {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.15), rgba(255, 0, 255, 0.1));
        border-radius: 12px;
        transform: rotate(45deg);
    }

    .stat-icon-wrapper i {
        position: relative;
        font-size: 1.25rem;
        color: #00ffff;
        text-shadow: 0 0 15px #00ffff;
        z-index: 1;
    }

    .stat-info {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 800;
        background: linear-gradient(135deg, #fff 0%, #00ffff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1;
    }

    .stat-label {
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.6);
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .stat-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 100px;
        height: 100px;
        background: radial-gradient(circle, rgba(0, 255, 255, 0.3) 0%, transparent 70%);
        transform: translate(-50%, -50%);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .stat-card:hover .stat-glow {
        opacity: 1;
    }

    /* Two Columns */
    .two-columns {
        display: grid;
        grid-template-columns: 1fr 1.2fr;
        gap: 1.5rem;
    }

    @media (max-width: 900px) {
        .two-columns { grid-template-columns: 1fr; }
    }

    .column-card {
        position: relative;
        padding: 1.75rem;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 1.25rem;
        overflow: hidden;
        backdrop-filter: blur(10px);
        transition: all 0.4s ease;
    }

    .column-card::before {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 1.25rem;
        padding: 1px;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.4), rgba(255, 0, 255, 0.2));
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        mask-composite: exclude;
        pointer-events: none;
        transition: all 0.3s ease;
    }

    .column-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 255, 255, 0.1);
    }

    .column-card:hover::before {
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.7), rgba(255, 0, 255, 0.4));
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
        position: relative;
    }

    .card-icon {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.2), rgba(255, 0, 255, 0.1));
        border-radius: 10px;
        border: 1px solid rgba(0, 255, 255, 0.3);
    }

    .card-icon i {
        color: #00ffff;
        text-shadow: 0 0 10px #00ffff;
    }

    .card-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-primary);
        flex: 1;
    }

    .card-decoration {
        width: 40px;
        height: 2px;
        background: linear-gradient(90deg, #00ffff, transparent);
        position: absolute;
        bottom: -8px;
        left: 0;
    }

    /* Languages */
    .languages-list {
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
        margin-bottom: 1.25rem;
    }

    .language-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.6rem 0.8rem;
        background: rgba(0, 255, 255, 0.03);
        border-radius: 0.6rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .language-item::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 3px;
        background: var(--lang-color, #00ffff);
        border-radius: 3px;
    }

    .language-item:hover {
        background: rgba(0, 255, 255, 0.08);
        transform: translateX(5px);
        box-shadow: -3px 0 15px rgba(0, 255, 255, 0.2);
    }

    .lang-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        box-shadow: 0 0 10px currentColor;
        flex-shrink: 0;
    }

    .lang-name {
        flex: 1;
        font-size: 0.9rem;
        color: var(--text-primary);
        font-weight: 500;
    }

    .lang-percent {
        font-size: 0.85rem;
        color: #00ffff;
        font-weight: 700;
        font-family: 'JetBrains Mono', monospace;
    }

    .languages-bar-container {
        position: relative;
    }

    .languages-bar {
        display: flex;
        height: 8px;
        border-radius: 4px;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.05);
    }

    .lang-bar-segment {
        height: 100%;
        transition: all 0.3s ease;
    }

    .lang-bar-segment:hover {
        filter: brightness(1.3);
        box-shadow: 0 0 15px currentColor;
    }

    .bar-glow {
        position: absolute;
        bottom: -5px;
        left: 0;
        right: 0;
        height: 10px;
        background: linear-gradient(90deg, rgba(0, 255, 255, 0.2), rgba(255, 0, 255, 0.15), rgba(0, 255, 255, 0.2));
        filter: blur(8px);
        opacity: 0.6;
    }

    /* Tech Stack */
    .tech-stack {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .tech-category {
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
    }

    .category-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .category-icon {
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 0, 255, 0.15);
        border-radius: 6px;
    }

    .category-icon i {
        font-size: 0.7rem;
        color: #ff00ff;
    }

    .category-label {
        font-size: 0.7rem;
