---
// Hero section - Sección principal con Three.js
---

<section id="hero" class="hero section section-bg">
    <!-- Fondo Three.js optimizado -->
    <div class="hero-background">
        <div class="hero-particles" id="hero-particles"></div>
        <div class="hero-constellations" id="hero-constellations"></div>
        <div class="hero-stars" id="hero-stars"></div>
    </div>

    <!-- Contenido principal -->
    <div class="hero-container">
        <div class="hero-content">
            <!-- Badge de rol -->
            <div class="hero-badge animate-fade-in-up" data-delay="0.2s">
                <div class="badge-icon">
                    <i class="fas fa-code"></i>
                </div>
                <span class="badge-text">Backend Developer</span>
                <div class="badge-glow"></div>
            </div>

            <!-- Título principal - texto simple, efectos via Three.js -->
            <h1 class="hero-title animate-fade-in-up" data-delay="0.4s" id="hero-title">
                <span class="title-line">Carlos</span>
                <span class="title-line">Orbegoso</span>
            </h1>

            <!-- Subtítulo con efecto typing -->
            <p class="hero-subtitle animate-fade-in-up" data-delay="0.6s">
                <span class="typing-text">Backend Developer & Java Specialist</span>
                <span class="typing-cursor">|</span>
            </p>

            <!-- Descripción -->
            <div class="hero-description animate-fade-in-up" data-delay="0.8s">
                <p>I develop robust and scalable enterprise applications with the best technologies in the market.</p>
            </div>

            <!-- Botones de acción -->
            <div class="hero-actions animate-fade-in-up" data-delay="1.0s">
                <a href="#projects" class="btn btn-primary btn-hero">
                    <div class="btn-content">
                        <i class="fas fa-rocket btn-icon"></i>
                        <span class="btn-text">View Projects</span>
                    </div>
                    <div class="btn-glow"></div>
                    <div class="btn-particles"></div>
                </a>

                <a href="#contact" class="btn btn-outline btn-hero">
                    <div class="btn-content">
                        <i class="fas fa-envelope btn-icon"></i>
                        <span class="btn-text">Contact</span>
                    </div>
                    <div class="btn-glow"></div>
                    <div class="btn-particles"></div>
                </a>
            </div>

            <!-- Stack de tecnologías -->
            <div class="tech-stack animate-fade-in-up" data-delay="1.2s">
                <div class="tech-badge" data-tech="java" data-delay="0.1s">
                    <div class="tech-icon">
                        <i class="fab fa-java"></i>
                    </div>
                    <span class="tech-name">Java</span>
                    <div class="tech-glow"></div>
                </div>

                <div class="tech-badge" data-tech="spring" data-delay="0.2s">
                    <div class="tech-icon">
                        <i class="fas fa-leaf"></i>
                    </div>
                    <span class="tech-name">Spring</span>
                    <div class="tech-glow"></div>
                </div>

                <div class="tech-badge" data-tech="quarkus" data-delay="0.3s">
                    <div class="tech-icon">
                        <i class="fas fa-rocket"></i>
                    </div>
                    <span class="tech-name">Quarkus</span>
                    <div class="tech-glow"></div>
                </div>

                <div class="tech-badge" data-tech="angular" data-delay="0.4s">
                    <div class="tech-icon">
                        <i class="fab fa-angular"></i>
                    </div>
                    <span class="tech-name">Angular</span>
                    <div class="tech-glow"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Indicador de scroll -->
    <div class="hero-scroll-indicator animate-fade-in-up" data-delay="1.4s">
        <div class="scroll-arrow">
            <div class="arrow-line"></div>
            <div class="arrow-line"></div>
        </div>
        <span class="scroll-text">Scroll to explore</span>
        <div class="scroll-glow"></div>
    </div>

    <!-- Elementos decorativos flotantes -->
    <div class="hero-decorations">
        <div class="floating-element element-1"></div>
        <div class="floating-element element-2"></div>
        <div class="floating-element element-3"></div>
    </div>
</section>
