    /* ===== SKELETON LOADERS ===== */
    .skeleton-card {
        position: relative;
        background: var(--card-bg-glass);
        border-radius: var(--card-radius);
        overflow: hidden;
        backdrop-filter: var(--card-backdrop);
        border: 1px solid rgba(0, 255, 255, 0.1);
    }

    .skeleton-card::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(0, 255, 255, 0.08),
            transparent
        );
        animation: skeletonShimmer 1.5s infinite;
    }

    @keyframes skeletonShimmer {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
    }

    .skeleton-preview {
        height: 140px;
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.05) 0%, rgba(0, 0, 0, 0.2) 100%);
        position: relative;
    }

    .skeleton-icon {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 60px;
        height: 60px;
        border-radius: 1rem;
        background: rgba(0, 255, 255, 0.1);
        animation: skeletonPulse 1.5s ease-in-out infinite;
    }

    .skeleton-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        width: 60px;
        height: 20px;
        border-radius: 50px;
        background: rgba(0, 255, 255, 0.1);
    }

    .skeleton-content {
        padding: 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .skeleton-title {
        height: 24px;
        width: 70%;
        border-radius: 4px;
        background: rgba(255, 255, 255, 0.08);
    }

    .skeleton-desc {
        height: 14px;
        border-radius: 4px;
        background: rgba(255, 255, 255, 0.05);
    }

    .skeleton-desc:nth-child(2) { width: 100%; }
    .skeleton-desc:nth-child(3) { width: 85%; }
    .skeleton-desc:nth-child(4) { width: 60%; }

    .skeleton-tags {
        display: flex;
        gap: 0.5rem;
        margin-top: 0.5rem;
    }

    .skeleton-tag {
        width: 60px;
        height: 22px;
        border-radius: 4px;
        background: rgba(0, 255, 255, 0.08);
    }

    .skeleton-footer {
        display: flex;
        gap: 1rem;
        margin-top: auto;
        padding-top: 0.75rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    .skeleton-stat {
        width: 40px;
        height: 16px;
        border-radius: 4px;
        background: rgba(255, 255, 255, 0.05);
    }

    @keyframes skeletonPulse {
        0%, 100% { opacity: 0.5; }
        50% { opacity: 1; }
    }

    /* Staggered skeleton animation */
    .skeleton-card:nth-child(1) { animation-delay: 0s; }
    .skeleton-card:nth-child(2) { animation-delay: 0.1s; }
    .skeleton-card:nth-child(3) { animation-delay: 0.2s; }
    .skeleton-card:nth-child(4) { animation-delay: 0.3s; }
    .skeleton-card:nth-child(5) { animation-delay: 0.4s; }
    .skeleton-card:nth-child(6) { animation-delay: 0.5s; }

    /* Project card entrance animation */
    .project-card {
        opacity: 0;
        transform: translateY(30px);
        animation: projectReveal 0.6s ease forwards;
    }

    .project-card:nth-child(1) { animation-delay: 0.1s; }
    .project-card:nth-child(2) { animation-delay: 0.2s; }
    .project-card:nth-child(3) { animation-delay: 0.3s; }
    .project-card:nth-child(4) { animation-delay: 0.4s; }
    .project-card:nth-child(5) { animation-delay: 0.5s; }
    .project-card:nth-child(6) { animation-delay: 0.6s; }

    @keyframes projectReveal {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

