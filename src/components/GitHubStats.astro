---
// GitHub Stats Section - Dynamic data from GitHub API
---

<section id="github" class="github-stats section section-bg">
    <div class="container">
        <!-- Header -->
        <div class="section-header">
            <div class="terminal-badge github-animate" data-anim-delay="0">
                <span class="terminal-dot red"></span>
                <span class="terminal-dot yellow"></span>
                <span class="terminal-dot green"></span>
                <span class="terminal-text">~/github</span>
            </div>
            <h2 class="section-title github-animate" data-anim-delay="100">
                <span class="title-gradient">Open Source</span>
                <span class="title-cursor">_</span>
            </h2>
            <p class="section-subtitle github-animate" data-anim-delay="200">
                My contributions and projects on GitHub
            </p>
        </div>

        <!-- Loading State -->
        <div id="github-loading" class="github-loading">
            <div class="loading-spinner"></div>
            <p>Fetching GitHub data...</p>
        </div>

        <!-- Error State -->
        <div id="github-error" class="github-error" style="display: none;">
            <i class="fas fa-exclamation-triangle"></i>
            <p>Unable to load GitHub data. Please try again later.</p>
            <button id="github-retry" class="retry-btn">
                <i class="fas fa-redo"></i> Retry
            </button>
        </div>

        <!-- GitHub Content -->
        <div id="github-content" class="github-content" style="display: none;">
            <!-- Profile Card -->
            <div class="github-profile-card github-animate" data-anim-delay="300">
                <div class="profile-header">
                    <img id="github-avatar" src="" alt="GitHub Avatar" class="github-avatar">
                    <div class="profile-info">
                        <h3 id="github-name">Loading...</h3>
                        <a id="github-link" href="" target="_blank" rel="noopener noreferrer" class="github-username">
                            <i class="fab fa-github"></i>
                            <span id="github-login">@username</span>
                        </a>
                        <p id="github-bio" class="github-bio"></p>
                    </div>
                </div>

                <!-- Stats Grid -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <i class="fas fa-code-branch"></i>
                        <span class="stat-value" id="stat-repos">0</span>
                        <span class="stat-label">Repositories</span>
                    </div>
                    <div class="stat-card">
                        <i class="fas fa-star"></i>
                        <span class="stat-value" id="stat-stars">0</span>
                        <span class="stat-label">Stars Earned</span>
                    </div>
                    <div class="stat-card">
                        <i class="fas fa-code-fork"></i>
                        <span class="stat-value" id="stat-forks">0</span>
                        <span class="stat-label">Forks</span>
                    </div>
                    <div class="stat-card">
                        <i class="fas fa-users"></i>
                        <span class="stat-value" id="stat-followers">0</span>
                        <span class="stat-label">Followers</span>
                    </div>
                </div>
            </div>

            <!-- Languages Chart -->
            <div class="languages-card github-animate" data-anim-delay="400">
                <h4 class="card-title">
                    <i class="fas fa-chart-pie"></i>
                    Top Languages
                </h4>
                <div id="languages-chart" class="languages-chart"></div>
            </div>

            <!-- Featured Repositories -->
            <div class="repos-section github-animate" data-anim-delay="500">
                <h4 class="card-title">
                    <i class="fas fa-folder-open"></i>
                    Featured Repositories
                </h4>
                <div id="repos-grid" class="repos-grid"></div>
            </div>

            <!-- GitHub Link -->
            <div class="github-cta github-animate" data-anim-delay="600">
                <a href="https://github.com/carlosorbegoso" target="_blank" rel="noopener noreferrer" class="github-btn">
                    <i class="fab fa-github"></i>
                    <span>View Full Profile</span>
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    .github-stats {
        position: relative;
        padding: 6rem 0;
        overflow: hidden;
    }

    /* Section Header */
    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .terminal-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(30, 35, 45, 0.8);
        border: 1px solid rgba(100, 181, 246, 0.2);
        border-radius: 8px;
        margin-bottom: 1.5rem;
        font-family: 'JetBrains Mono', monospace;
    }

    .terminal-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
    }

    .terminal-dot.red { background: #ff5f57; }
    .terminal-dot.yellow { background: #febc2e; }
    .terminal-dot.green { background: #28c840; }

    .terminal-text {
        color: var(--text-secondary);
        font-size: 0.85rem;
        margin-left: 0.5rem;
    }

    .section-title {
        font-size: clamp(2rem, 5vw, 3rem);
        font-weight: 800;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.25rem;
    }

    .title-gradient {
        background: linear-gradient(135deg, #fff 0%, var(--primary-color) 50%, #00ffff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .title-cursor {
        color: var(--primary-color);
        animation: blink 1s step-end infinite;
    }

    @keyframes blink { 50% { opacity: 0; } }

    .section-subtitle {
        font-size: 1.1rem;
        color: var(--text-secondary);
        max-width: 500px;
        margin: 0 auto;
    }

    /* Loading State */
    .github-loading {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 4rem;
        color: var(--text-secondary);
    }

    .loading-spinner {
        width: 50px;
        height: 50px;
        border: 3px solid rgba(100, 181, 246, 0.1);
        border-top-color: var(--primary-color);
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin-bottom: 1rem;
    }

    @keyframes spin {
        to { transform: rotate(360deg); }
    }

    /* Error State */
    .github-error {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 4rem;
        color: var(--text-secondary);
        text-align: center;
    }

    .github-error i {
        font-size: 3rem;
        color: var(--warning-color);
        margin-bottom: 1rem;
    }

    .retry-btn {
        margin-top: 1rem;
        padding: 0.75rem 1.5rem;
        background: rgba(100, 181, 246, 0.1);
        border: 1px solid rgba(100, 181, 246, 0.3);
        border-radius: 8px;
        color: var(--primary-color);
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .retry-btn:hover {
        background: rgba(100, 181, 246, 0.2);
        border-color: var(--primary-color);
    }

    /* Content Layout */
    .github-content {
        display: grid;
        gap: 1.5rem;
        max-width: 1100px;
        margin: 0 auto;
    }

    /* Profile Card */
    .github-profile-card {
        background: rgba(20, 25, 35, 0.6);
        border: 1px solid rgba(100, 181, 246, 0.1);
        border-radius: 1.25rem;
        padding: 2rem;
        backdrop-filter: blur(10px);
    }

    .profile-header {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .github-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        border: 3px solid var(--primary-color);
        box-shadow: 0 0 20px rgba(100, 181, 246, 0.3);
    }

    .profile-info {
        flex: 1;
        min-width: 200px;
    }

    .profile-info h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.25rem;
    }

    .github-username {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--primary-color);
        text-decoration: none;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

    .github-username:hover {
        color: #00ffff;
    }

    .github-bio {
        margin-top: 0.75rem;
        color: var(--text-secondary);
        font-size: 0.95rem;
        line-height: 1.5;
    }

    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
    }

    .stat-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1.25rem;
        background: rgba(100, 181, 246, 0.05);
        border: 1px solid rgba(100, 181, 246, 0.1);
        border-radius: 12px;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        background: rgba(100, 181, 246, 0.1);
        border-color: rgba(100, 181, 246, 0.3);
        transform: translateY(-3px);
    }

    .stat-card i {
        font-size: 1.25rem;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
    }

    .stat-value {
        font-size: 1.75rem;
        font-weight: 800;
        background: linear-gradient(135deg, var(--primary-color), #00ffff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-label {
        font-size: 0.7rem;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-top: 0.25rem;
    }

    /* Languages Card */
    .languages-card {
        background: rgba(20, 25, 35, 0.6);
        border: 1px solid rgba(100, 181, 246, 0.1);
        border-radius: 1.25rem;
        padding: 1.5rem;
        backdrop-filter: blur(10px);
    }

    .card-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 1.25rem;
    }

    .card-title i {
        color: var(--primary-color);
    }

    .languages-chart {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .language-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .language-color {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        flex-shrink: 0;
    }

    .language-name {
        flex: 1;
        font-size: 0.85rem;
        color: var(--text-primary);
    }

    .language-bar-container {
        flex: 2;
        height: 8px;
        background: rgba(100, 181, 246, 0.1);
        border-radius: 4px;
        overflow: hidden;
    }

    .language-bar {
        height: 100%;
        border-radius: 4px;
        transition: width 1s ease-out;
    }

    .language-percentage {
        font-size: 0.75rem;
        color: var(--text-secondary);
        min-width: 35px;
        text-align: right;
    }

    /* Repos Section */
    .repos-section {
        background: rgba(20, 25, 35, 0.6);
        border: 1px solid rgba(100, 181, 246, 0.1);
        border-radius: 1.25rem;
        padding: 1.5rem;
        backdrop-filter: blur(10px);
    }

    .repos-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1rem;
    }

    .repo-card {
        background: rgba(100, 181, 246, 0.03);
        border: 1px solid rgba(100, 181, 246, 0.1);
        border-radius: 12px;
        padding: 1.25rem;
        transition: all 0.3s ease;
        text-decoration: none;
        display: block;
    }

    .repo-card:hover {
        background: rgba(100, 181, 246, 0.08);
        border-color: rgba(100, 181, 246, 0.3);
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .repo-header {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
    }

    .repo-icon {
        color: var(--primary-color);
        font-size: 1.1rem;
        margin-top: 0.2rem;
    }

    .repo-name {
        font-size: 1rem;
        font-weight: 600;
        color: var(--primary-color);
        word-break: break-word;
    }

    .repo-description {
        font-size: 0.85rem;
        color: var(--text-secondary);
        line-height: 1.5;
        margin-bottom: 1rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .repo-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .repo-language {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        font-size: 0.75rem;
        color: var(--text-secondary);
    }

    .repo-language .lang-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
    }

    .repo-stat {
        display: flex;
        align-items: center;
        gap: 0.3rem;
        font-size: 0.75rem;
        color: var(--text-secondary);
    }

    .repo-stat i {
        font-size: 0.7rem;
    }

    /* CTA Button */
    .github-cta {
        text-align: center;
        margin-top: 1rem;
    }

    .github-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 2rem;
        background: linear-gradient(135deg, rgba(100, 181, 246, 0.1), rgba(0, 255, 255, 0.1));
        border: 1px solid rgba(100, 181, 246, 0.3);
        border-radius: 50px;
        color: var(--text-primary);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .github-btn:hover {
        background: linear-gradient(135deg, rgba(100, 181, 246, 0.2), rgba(0, 255, 255, 0.2));
        border-color: var(--primary-color);
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(100, 181, 246, 0.2);
    }

    .github-btn i:first-child {
        font-size: 1.25rem;
    }

    .github-btn i:last-child {
        font-size: 0.85rem;
        transition: transform 0.3s ease;
    }

    .github-btn:hover i:last-child {
        transform: translateX(5px);
    }

    /* Animations */
    .github-animate {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .github-animate.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .github-stats { padding: 4rem 0; }

        .profile-header {
            flex-direction: column;
            text-align: center;
        }

        .profile-info {
            text-align: center;
        }

        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .repos-grid {
            grid-template-columns: 1fr;
        }

        .github-btn {
            padding: 0.875rem 1.5rem;
            font-size: 0.9rem;
        }
    }

    @media (max-width: 480px) {
        .github-profile-card,
        .languages-card,
        .repos-section {
            padding: 1.25rem;
        }

        .github-avatar {
            width: 80px;
            height: 80px;
        }

        .stat-card {
            padding: 1rem;
        }

        .stat-value {
            font-size: 1.5rem;
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .github-animate {
            transition: opacity 0.3s ease;
            transform: none;
        }
        .loading-spinner {
            animation: none;
        }
    }
</style>

<script>
    import { getGitHubStats, languageColors } from '../scripts/services/github-api.js';

    // DOM Elements
    const loadingEl = document.getElementById('github-loading');
    const errorEl = document.getElementById('github-error');
    const contentEl = document.getElementById('github-content');
    const retryBtn = document.getElementById('github-retry');

    // Animate number counting
    function animateNumber(element, target, duration = 1500) {
        const start = 0;
        const startTime = performance.now();

        function update(currentTime) {
            const elapsed = currentTime - startTime;
            const progress = Math.min(elapsed / duration, 1);
            const easeOut = 1 - Math.pow(1 - progress, 3);
            const current = Math.floor(start + (target - start) * easeOut);
            element.textContent = current.toLocaleString();

            if (progress < 1) {
                requestAnimationFrame(update);
            }
        }

        requestAnimationFrame(update);
    }

    // Render languages chart
    function renderLanguages(languages) {
        const container = document.getElementById('languages-chart');
        if (!container || !languages.length) return;

        container.innerHTML = languages.map(({ language, percentage }) => {
            const color = languageColors[language] || '#8b8b8b';
            return `
                <div class="language-item">
                    <span class="language-color" style="background: ${color}"></span>
                    <span class="language-name">${language}</span>
                    <div class="language-bar-container">
                        <div class="language-bar" style="width: 0%; background: ${color}" data-width="${percentage}"></div>
                    </div>
                    <span class="language-percentage">${percentage}%</span>
                </div>
            `;
        }).join('');

        // Animate bars after a short delay
        setTimeout(() => {
            container.querySelectorAll('.language-bar').forEach(bar => {
                const width = bar.getAttribute('data-width');
                bar.style.width = `${width}%`;
            });
        }, 300);
    }

    // Render repositories
    function renderRepos(repos) {
        const container = document.getElementById('repos-grid');
        if (!container || !repos.length) return;

        container.innerHTML = repos.map(repo => {
            const langColor = languageColors[repo.language] || '#8b8b8b';
            const description = repo.description || 'No description available';

            return `
                <a href="${repo.url}" target="_blank" rel="noopener noreferrer" class="repo-card">
                    <div class="repo-header">
                        <i class="fas fa-book-bookmark repo-icon"></i>
                        <span class="repo-name">${repo.name}</span>
                    </div>
                    <p class="repo-description">${description}</p>
                    <div class="repo-meta">
                        ${repo.language ? `
                            <span class="repo-language">
                                <span class="lang-dot" style="background: ${langColor}"></span>
                                ${repo.language}
                            </span>
                        ` : ''}
                        <span class="repo-stat">
                            <i class="fas fa-star"></i>
                            ${repo.stars}
                        </span>
                        <span class="repo-stat">
                            <i class="fas fa-code-fork"></i>
                            ${repo.forks}
                        </span>
                    </div>
                </a>
            `;
        }).join('');
    }

    // Show error state
    function showError() {
        loadingEl.style.display = 'none';
        errorEl.style.display = 'flex';
        contentEl.style.display = 'none';
    }

    // Show content
    function showContent() {
        loadingEl.style.display = 'none';
        errorEl.style.display = 'none';
        contentEl.style.display = 'grid';

        // Trigger animations
        setTimeout(() => {
            document.querySelectorAll('.github-animate').forEach((el, i) => {
                const delay = parseInt(el.getAttribute('data-anim-delay') || '0');
                setTimeout(() => el.classList.add('visible'), delay);
            });
        }, 100);
    }

    // Load GitHub data
    async function loadGitHubData() {
        loadingEl.style.display = 'flex';
        errorEl.style.display = 'none';
        contentEl.style.display = 'none';

        try {
            const data = await getGitHubStats();

            if (!data) {
                showError();
                return;
            }

            // Update profile
            document.getElementById('github-avatar').src = data.profile.avatar;
            document.getElementById('github-name').textContent = data.profile.name;
            document.getElementById('github-login').textContent = `@${data.profile.login}`;
            document.getElementById('github-link').href = `https://github.com/${data.profile.login}`;
            document.getElementById('github-bio').textContent = data.profile.bio || '';

            // Show content first
            showContent();

            // Animate stats with delay
            setTimeout(() => {
                animateNumber(document.getElementById('stat-repos'), data.stats.totalRepos);
                animateNumber(document.getElementById('stat-stars'), data.stats.totalStars);
                animateNumber(document.getElementById('stat-forks'), data.stats.totalForks);
                animateNumber(document.getElementById('stat-followers'), data.stats.followers);
            }, 500);

            // Render languages and repos
            renderLanguages(data.languages);
            renderRepos(data.featuredRepos);

        } catch (error) {
            console.error('Error loading GitHub data:', error);
            showError();
        }
    }

    // Retry button handler
    retryBtn?.addEventListener('click', loadGitHubData);

    // Intersection Observer for lazy loading
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                loadGitHubData();
                observer.unobserve(entry.target);
            }
        });
    }, { threshold: 0.1 });

    // Start observing the section
    const section = document.getElementById('github');
    if (section) {
        observer.observe(section);
    }
</script>
