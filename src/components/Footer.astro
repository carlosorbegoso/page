---
// Footer component - Diseño minimalista y elegante
const currentYear = new Date().getFullYear();
---

<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <!-- Daily Quote -->
            <div class="footer-quote" id="footer-quote">
                <i class="fas fa-quote-left quote-icon"></i>
                <blockquote id="quote-text">Loading inspiration...</blockquote>
                <cite id="quote-author"></cite>
            </div>

            <!-- Copyright & Stats -->
            <div class="footer-bottom">
                <p class="footer-text">
                    &copy; {currentYear} Carlos Orbegoso
                </p>
                <span class="footer-dot">·</span>
                <p class="footer-tech">
                    Astro + Three.js
                </p>
                <span class="footer-dot">·</span>
                <p class="footer-visitors" id="visitor-count">
                    <i class="fas fa-eye"></i>
                    <span id="visitor-number">...</span> visits
                </p>
                <span class="footer-dot" id="last-updated-dot" style="display: none;">·</span>
                <p class="footer-updated" id="last-updated" style="display: none;">
                    <i class="fas fa-code-commit"></i>
                    <span id="last-updated-text">...</span>
                </p>
            </div>

            <!-- Back to top button -->
            <button class="back-to-top" id="back-to-top" aria-label="Back to top">
                <i class="fas fa-chevron-up"></i>
            </button>
        </div>
    </div>
</footer>

<style>
    .footer {
        position: relative;
        padding: 2.5rem 0 1.5rem;
        background: rgba(13, 17, 23, 0.3);
        border-top: 1px solid rgba(100, 181, 246, 0.08);
    }

    .footer-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        position: relative;
    }

    /* Quote section */
    .footer-quote {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        max-width: 500px;
        text-align: center;
        padding: 0 1rem;
        /* Animation initial state */
        opacity: 0;
        transform: translateY(20px);
    }

    .footer-quote.visible {
        animation: footerFadeUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    .quote-icon {
        font-size: 1rem;
        color: rgba(100, 181, 246, 0.3);
        transition: all 0.3s ease;
    }

    .footer-quote.visible .quote-icon {
        animation: quoteIconPop 0.5s ease 0.3s forwards;
    }

    @keyframes quoteIconPop {
        0% { transform: scale(1); }
        50% { transform: scale(1.3); color: var(--primary-color); }
        100% { transform: scale(1); }
    }

    .footer-quote blockquote {
        font-size: 0.9rem;
        font-style: italic;
        color: var(--text-secondary);
        line-height: 1.5;
        margin: 0;
    }

    .footer-quote cite {
        font-size: 0.75rem;
        color: var(--primary-color);
        font-style: normal;
        opacity: 0;
    }

    .footer-quote.visible cite {
        animation: citeFadeIn 0.5s ease 0.4s forwards;
    }

    @keyframes citeFadeIn {
        to { opacity: 0.8; }
    }

    @keyframes footerFadeUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Bottom section */
    .footer-bottom {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex-wrap: wrap;
        justify-content: center;
        /* Animation initial state */
        opacity: 0;
        transform: translateY(15px);
    }

    .footer-bottom.visible {
        animation: footerFadeUp 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.2s forwards;
    }

    /* Stagger animation for bottom items */
    .footer-bottom.visible .footer-text { animation: bottomItemFade 0.4s ease 0.3s forwards; opacity: 0; }
    .footer-bottom.visible .footer-tech { animation: bottomItemFade 0.4s ease 0.4s forwards; opacity: 0; }
    .footer-bottom.visible .footer-visitors { animation: bottomItemFade 0.4s ease 0.5s forwards; opacity: 0; }
    .footer-bottom.visible .footer-updated { animation: bottomItemFade 0.4s ease 0.6s forwards; opacity: 0; }
    .footer-bottom.visible .footer-dot { animation: dotFade 0.3s ease 0.35s forwards; opacity: 0; }
    .footer-bottom.visible .footer-dot:nth-child(4) { animation-delay: 0.45s; }
    .footer-bottom.visible .footer-dot:nth-child(6) { animation-delay: 0.55s; }

    @keyframes bottomItemFade {
        to { opacity: 0.7; }
    }

    @keyframes dotFade {
        to { opacity: 1; }
    }

    .footer-text,
    .footer-tech,
    .footer-visitors {
        color: var(--text-secondary);
        font-size: 0.75rem;
        opacity: 0;
        margin: 0;
    }

    .footer-visitors,
    .footer-updated {
        display: flex;
        align-items: center;
        gap: 0.35rem;
    }

    .footer-visitors i,
    .footer-updated i {
        font-size: 0.7rem;
        color: var(--primary-color);
        opacity: 0.7;
    }

    .footer-updated {
        color: var(--text-secondary);
        font-size: 0.75rem;
        opacity: 0.7;
        margin: 0;
    }

    .footer-dot {
        color: rgba(100, 181, 246, 0.3);
        font-size: 0.75rem;
    }

    /* Back to top button */
    .back-to-top {
        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 36px;
        height: 36px;
        background: rgba(100, 181, 246, 0.08);
        border: 1px solid rgba(100, 181, 246, 0.15);
        border-radius: 8px;
        color: var(--text-secondary);
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.8rem;
        /* Animation initial state */
        opacity: 0;
        scale: 0.8;
    }

    .back-to-top.visible {
        animation: backToTopPop 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) 0.6s forwards;
    }

    @keyframes backToTopPop {
        to {
            opacity: 1;
            scale: 1;
        }
    }

    .back-to-top:hover {
        background: rgba(100, 181, 246, 0.15);
        border-color: rgba(100, 181, 246, 0.3);
        color: var(--primary-color);
        transform: translateY(-50%) translateY(-2px);
        box-shadow: 0 4px 15px rgba(100, 181, 246, 0.2);
    }

    .back-to-top:active {
        transform: translateY(-50%) translateY(0);
        scale: 0.95;
    }

    /* Pulse animation on scroll */
    .back-to-top.pulse {
        animation: backToTopPulse 0.6s ease;
    }

    @keyframes backToTopPulse {
        0%, 100% { box-shadow: 0 0 0 0 rgba(100, 181, 246, 0.4); }
        50% { box-shadow: 0 0 0 10px rgba(100, 181, 246, 0); }
    }

    /* Responsive */
    @media (max-width: 768px) {
        .footer {
            padding: 1.5rem 0 1.25rem;
        }

        .footer-content {
            gap: 1rem;
        }

        .footer-social-link {
            width: 42px;
            height: 42px;
        }

        .back-to-top {
            position: relative;
            transform: none;
            top: auto;
            right: auto;
            margin-top: 0.5rem;
        }

        .back-to-top:hover {
            transform: translateY(-2px);
        }
    }

    /* Safe area para dispositivos con notch */
    @supports (padding: max(0px)) {
        .footer {
            padding-bottom: max(1.5rem, env(safe-area-inset-bottom));
        }
    }

    /* Reduced motion support */
    @media (prefers-reduced-motion: reduce) {
        .footer-quote,
        .footer-bottom,
        .back-to-top {
            opacity: 1;
            transform: none;
            scale: 1;
            animation: none !important;
        }

        .footer-quote cite,
        .footer-text,
        .footer-tech,
        .footer-visitors,
        .footer-updated,
        .footer-dot {
            opacity: 0.7;
            animation: none !important;
        }
    }
</style>

<script>
    import { getQuoteOfTheDay } from '../scripts/services/quotes-api.js';
    import { getVisitorCount } from '../scripts/services/visitor-api.js';
    import { getLastCommitDate } from '../scripts/services/github-api.js';

    // Load quote
    function loadQuote() {
        const quoteText = document.getElementById('quote-text');
        const quoteAuthor = document.getElementById('quote-author');

        if (quoteText && quoteAuthor) {
            try {
                const quote = getQuoteOfTheDay();
                quoteText.textContent = `"${quote.content}"`;
                quoteAuthor.textContent = `— ${quote.author}`;
            } catch (error) {
                quoteText.textContent = `"Talk is cheap. Show me the code."`;
                quoteAuthor.textContent = `— Linus Torvalds`;
            }
        }
    }

    // Load visitor count
    async function loadVisitorCount() {
        const visitorEl = document.getElementById('visitor-number');
        if (visitorEl) {
            try {
                const count = await getVisitorCount();
                if (count !== null) {
                    visitorEl.textContent = count.toLocaleString();
                } else {
                    // Hide if API fails
                    const container = document.getElementById('visitor-count');
                    const dot = container?.previousElementSibling;
                    if (container) container.style.display = 'none';
                    if (dot) (dot as HTMLElement).style.display = 'none';
                }
            } catch (error) {
                const container = document.getElementById('visitor-count');
                const dot = container?.previousElementSibling;
                if (container) container.style.display = 'none';
                if (dot) (dot as HTMLElement).style.display = 'none';
            }
        }
    }

    // Load last updated date from GitHub
    async function loadLastUpdated() {
        const container = document.getElementById('last-updated');
        const dot = document.getElementById('last-updated-dot');
        const textEl = document.getElementById('last-updated-text');

        if (container && textEl) {
            try {
                const commitInfo = await getLastCommitDate('page');
                if (commitInfo) {
                    // Format time ago
                    const timeAgo = getTimeAgo(commitInfo.date);
                    textEl.textContent = `Updated ${timeAgo}`;
                    container.style.display = 'flex';
                    if (dot) dot.style.display = '';

                    // Add tooltip with commit info
                    container.setAttribute('title', `${commitInfo.sha}: ${commitInfo.message}`);
                }
            } catch (error) {
                console.error('Error loading last updated:', error);
            }
        }
    }

    // Helper function to format time ago
    function getTimeAgo(date: Date): string {
        const seconds = Math.floor((Date.now() - date.getTime()) / 1000);

        const intervals = [
            { label: 'year', seconds: 31536000 },
            { label: 'month', seconds: 2592000 },
            { label: 'week', seconds: 604800 },
            { label: 'day', seconds: 86400 },
            { label: 'hour', seconds: 3600 },
            { label: 'minute', seconds: 60 }
        ];

        for (const interval of intervals) {
            const count = Math.floor(seconds / interval.seconds);
            if (count >= 1) {
                return `${count} ${interval.label}${count > 1 ? 's' : ''} ago`;
            }
        }

        return 'just now';
    }

    loadQuote();
    loadVisitorCount();
    loadLastUpdated();

    // Footer entrance animations with IntersectionObserver
    const footerAnimElements = [
        document.querySelector('.footer-quote'),
        document.querySelector('.footer-bottom'),
        document.getElementById('back-to-top')
    ].filter(Boolean);

    const footerObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
                footerObserver.unobserve(entry.target);
            }
        });
    }, {
        threshold: 0.2,
        rootMargin: '0px 0px -50px 0px'
    });

    footerAnimElements.forEach(el => {
        if (el) footerObserver.observe(el);
    });

    // Back to top functionality
    const backToTop = document.getElementById('back-to-top');
    if (backToTop) {
        backToTop.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // Show pulse effect when scrolling past certain threshold
        let hasShownPulse = false;
        window.addEventListener('scroll', () => {
            if (!hasShownPulse && window.scrollY > window.innerHeight * 2) {
                backToTop.classList.add('pulse');
                hasShownPulse = true;
                setTimeout(() => backToTop.classList.remove('pulse'), 600);
            }
        }, { passive: true });
    }
</script>
