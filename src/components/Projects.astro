        </div>

        <!-- View More -->
        <div class="projects-cta proj-animate" data-anim-delay="700">
            <a href="https://github.com/carlosorbegoso" target="_blank" class="cta-link">
                <span>View All Projects</span>
                <i class="fab fa-github"></i>
            </a>
        </div>
    </div>
</section>

<style>
    .projects {
        position: relative;
        padding: 6rem 0;
        overflow: hidden;
    }

    .projects-background {
        position: absolute;
        inset: 0;
        pointer-events: none;
    }

    .projects-pattern {
        position: absolute;
        inset: 0;
        background-image:
            radial-gradient(circle at 30% 20%, rgba(100, 181, 246, 0.04) 0%, transparent 50%),
            radial-gradient(circle at 70% 80%, rgba(255, 107, 53, 0.03) 0%, transparent 50%);
    }

    .code-symbols {
        position: absolute;
        inset: 0;
    }

    .code-symbol {
        position: absolute;
        left: var(--x);
        top: var(--y);
        font-family: 'Fira Code', monospace;
        font-size: 1.5rem;
        color: var(--primary-color);
        opacity: 0.15;
        animation: codeFloat 8s ease-in-out infinite;
        animation-delay: var(--delay);
    }

    @keyframes codeFloat {
        0%, 100% { transform: translateY(0) rotate(0deg); opacity: 0.15; }
        50% { transform: translateY(-20px) rotate(10deg); opacity: 0.3; }
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .project-card {
        position: relative;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(100, 181, 246, 0.1);
        border-radius: 1rem;
        padding: 1.5rem;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .project-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.4s ease;
    }

    .project-card:hover::before {
        transform: scaleX(1);
    }

    .project-card:hover {
        transform: translateY(-10px);
        border-color: rgba(100, 181, 246, 0.3);
        box-shadow: 0 25px 50px rgba(100, 181, 246, 0.15);
    }

    .card-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(100, 181, 246, 0.1) 0%, transparent 50%);
        transform: translate(-50%, -50%);
        opacity: 0;
        transition: opacity 0.4s ease;
        pointer-events: none;
    }

    .project-card:hover .card-glow {
        opacity: 1;
    }

    .project-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
    }

    .project-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, rgba(100, 181, 246, 0.1), rgba(100, 181, 246, 0.05));
        border: 1px solid rgba(100, 181, 246, 0.2);
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        color: var(--primary-color);
        transition: all 0.3s ease;
    }

    .project-card:hover .project-icon {
        transform: rotate(5deg) scale(1.1);
        background: rgba(100, 181, 246, 0.15);
        box-shadow: 0 0 20px rgba(100, 181, 246, 0.3);
    }

    .project-links {
        display: flex;
        gap: 0.5rem;
    }

    .project-link {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(100, 181, 246, 0.05);
        border: 1px solid rgba(100, 181, 246, 0.15);
        border-radius: 0.5rem;
        color: var(--text-secondary);
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .project-link:hover {
        background: var(--primary-color);
        border-color: var(--primary-color);
        color: white;
        transform: translateY(-2px);
    }

    .project-content {
        position: relative;
        z-index: 1;
    }

    .project-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .project-type {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
    }

    .type-badge {
        padding: 0.25rem 0.5rem;
        background: linear-gradient(135deg, rgba(100, 181, 246, 0.15), rgba(100, 181, 246, 0.1));
        border-radius: 9999px;
        font-size: 0.7rem;
        font-weight: 600;
        color: var(--primary-color);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .type-tech {
        font-size: 0.8rem;
        color: var(--accent-color);
        font-weight: 500;
    }

    .project-description {
        color: var(--text-secondary);
        line-height: 1.6;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .project-features {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .feature {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        font-size: 0.8rem;
        color: var(--text-secondary);
    }

    .feature i {
        color: #4ade80;
        font-size: 0.7rem;
    }

    .project-tech {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tech-pill {
        padding: 0.25rem 0.625rem;
        background: rgba(100, 181, 246, 0.08);
        border: 1px solid rgba(100, 181, 246, 0.2);
        border-radius: 9999px;
        font-size: 0.75rem;
        color: var(--primary-color);
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .tech-pill:hover {
        background: rgba(100, 181, 246, 0.15);
        border-color: rgba(100, 181, 246, 0.4);
        transform: translateY(-1px);
    }

    .projects-cta {
        text-align: center;
        margin-top: 3rem;
    }

    .cta-link {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 2rem;
        background: transparent;
        border: 2px solid rgba(100, 181, 246, 0.3);
        border-radius: 50px;
        color: var(--primary-color);
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .cta-link:hover {
        background: var(--primary-color);
        border-color: var(--primary-color);
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(100, 181, 246, 0.3);
    }

    .cta-link i {
        font-size: 1.25rem;
        transition: transform 0.3s ease;
    }

    .cta-link:hover i {
        transform: rotate(360deg);
    }

    /* Animation observer styles */
    .proj-animate {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .proj-animate.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .projects {
            padding: 4rem 0;
        }

        .projects-grid {
            grid-template-columns: 1fr;
            gap: 1.25rem;
        }

        .project-card {
            padding: 1.25rem;
        }

        .project-title {
            font-size: 1.125rem;
        }

        .code-symbol {
            font-size: 1.25rem;
        }
    }

    @media (max-width: 480px) {
        .project-icon {
            width: 40px;
            height: 40px;
            font-size: 1rem;
        }

        .project-features {
            flex-direction: column;
            gap: 0.5rem;
        }

        .tech-pill {
            font-size: 0.7rem;
            padding: 0.2rem 0.5rem;
        }

        .projects-cta {
            margin-top: 2rem;
        }

        .cta-link {
            padding: 0.75rem 1.5rem;
            font-size: 0.875rem;
        }
    }
</style>

<script>
    // Intersection Observer for scroll animations
    document.addEventListener('DOMContentLoaded', () => {
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const delay = parseInt(entry.target.getAttribute('data-anim-delay') || '0');
                    setTimeout(() => {
                        entry.target.classList.add('visible');
                    }, delay);
                }
            });
        }, observerOptions);

        // Observe all animated elements
        document.querySelectorAll('.proj-animate').forEach(el => {
            observer.observe(el);
        });

        // Card tilt effect
        document.querySelectorAll('.project-card').forEach(card => {
            card.addEventListener('mousemove', (e) => {
                const rect = card.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                const centerX = rect.width / 2;
                const centerY = rect.height / 2;
                const rotateX = (y - centerY) / 25;
                const rotateY = (centerX - x) / 25;

                card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateY(-10px)`;
            });

            card.addEventListener('mouseleave', () => {
                card.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) translateY(0)';
            });
        });
    });
</script>
