---
// Hero section - Main section with profile and Three.js background
---

<section id="hero" class="hero section section-bg">
    <!-- Fondo Three.js optimizado -->
    <div class="hero-background">
        <div class="hero-particles" id="hero-particles"></div>
        <div class="hero-constellations" id="hero-constellations"></div>
        <div class="hero-stars" id="hero-stars"></div>
        <!-- Gradient orbs -->
        <div class="gradient-orb orb-1"></div>
        <div class="gradient-orb orb-2"></div>
        <div class="gradient-orb orb-3"></div>
    </div>

    <!-- Contenido principal -->
    <div class="hero-container">
        <div class="hero-content">
            <!-- Layout con foto y texto -->
            <div class="hero-grid">
                <!-- Foto de perfil -->
                <div class="hero-photo animate-fade-in-up" data-delay="0.2s">
                    <div class="photo-container">
                        <div class="photo-wrapper">
                            <img src={`${import.meta.env.BASE_URL}/images/profile.jpeg`} alt="Carlos Orbegoso" class="profile-img">
                            <div class="photo-ring"></div>
                            <div class="photo-ring ring-2"></div>
                            <div class="photo-glow"></div>
                            <div class="photo-pulse"></div>
                        </div>
                    </div>

                    <!-- Tech Icons Row (below photo) -->
                    <div class="tech-icons-row">
                        <div class="tech-icon icon-java" style="--delay: 0s;">
                            <i class="fab fa-java"></i>
                        </div>
                        <div class="tech-icon icon-docker" style="--delay: 0.1s;">
                            <i class="fab fa-docker"></i>
                        </div>
                        <div class="tech-icon icon-aws" style="--delay: 0.2s;">
                            <i class="fab fa-aws"></i>
                        </div>
                        <div class="tech-icon icon-git" style="--delay: 0.3s;">
                            <i class="fab fa-git-alt"></i>
                        </div>
                    </div>

                    <!-- Badges -->
                    <div class="hero-badges">
                        <!-- Badge disponible -->
                        <div class="availability-badge">
                            <span class="pulse"></span>
                            <span>Available for Work</span>
                        </div>
                        <!-- Badge ubicaci贸n/clima -->
                        <div class="location-badge" id="location-badge">
                            <i class="fas fa-sun" id="hero-weather-icon"></i>
                            <span id="hero-temp">--掳C</span>
                            <span class="location-separator">路</span>
                            <span class="location-text">Lima, Peru</span>
                        </div>
                    </div>
                </div>

                <!-- Info -->
                <div class="hero-info">
                    <!-- Greeting -->
                    <div class="hero-greeting animate-fade-in-up" data-delay="0.3s">
                        <span class="greeting-wave"></span>
                        <span class="greeting-text">Hello, I'm</span>
                    </div>

                    <!-- Nombre con efecto glitch -->
                    <h1 class="hero-title animate-fade-in-up" data-delay="0.4s">
                        <span class="title-line">Carlos</span>
                        <span class="title-line highlight glitch" data-text="Orbegoso">Orbegoso</span>
                    </h1>

                    <!-- Rol con typing effect -->
                    <div class="hero-subtitle animate-fade-in-up" data-delay="0.6s">
                        <span class="typing-prefix">I'm a</span>
                        <span class="typing-container">
                            <span class="typing-text" id="typing-text"></span>
                            <span class="typing-cursor">|</span>
                        </span>
                    </div>

                    <!-- Bio con highlight animado -->
                    <p class="hero-bio animate-fade-in-up" data-delay="0.8s">
                        Passionate about building <strong class="highlight-word">robust, scalable systems</strong> using modern technologies.
                        Specialized in <strong class="highlight-word">microservices</strong>, <strong class="highlight-word">clean code</strong>, and delivering
                        high-quality solutions that make a real impact.
                    </p>

                    <!-- Stats mini -->
                    <div class="hero-stats animate-fade-in-up" data-delay="0.9s">
                        <div class="hero-stat">
                            <span class="stat-number" data-count="5">0</span>
                            <span class="stat-label">Years Exp</span>
                        </div>
                        <div class="stat-divider"></div>
                        <div class="hero-stat">
                            <span class="stat-number" data-count="20">0</span>
                            <span class="stat-label">Projects</span>
                        </div>
                        <div class="stat-divider"></div>
                        <div class="hero-stat">
                            <span class="stat-number" data-count="100">0</span>
                            <span class="stat-label">% Passion</span>
                        </div>
                    </div>

                    <!-- Botones mejorados -->
                    <div class="hero-actions animate-fade-in-up" data-delay="1.0s">
                        <a href="#tech" class="btn btn-primary magnetic-btn">
                            <span class="btn-bg"></span>
                            <i class="fas fa-rocket"></i>
                            <span>View Projects</span>
                        </a>
                        <a href="#contact" class="btn btn-outline magnetic-btn">
                            <span class="btn-border"></span>
                            <i class="fas fa-envelope"></i>
                            <span>Get In Touch</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Indicador de scroll minimalista -->
    <div class="hero-scroll-indicator animate-fade-in-up" data-delay="1.4s">
        <div class="scroll-mouse">
            <div class="scroll-wheel"></div>
        </div>
    </div>
</section>


<script>
    import { getCurrentWeather, getCurrentTime } from '../scripts/services/weather-api.js';

    // Typing effect
    const roles = ['Backend Developer', 'Java Specialist', 'Microservices Expert', 'Cloud Architect'];
    let roleIndex = 0;
    let charIndex = 0;
    let isDeleting = false;
    const typingEl = document.getElementById('typing-text');

    function typeEffect() {
        if (!typingEl) return;

        const currentRole = roles[roleIndex];

        if (isDeleting) {
            typingEl.textContent = currentRole.substring(0, charIndex - 1);
            charIndex--;
        } else {
            typingEl.textContent = currentRole.substring(0, charIndex + 1);
            charIndex++;
        }

        let typeSpeed = isDeleting ? 50 : 100;

        if (!isDeleting && charIndex === currentRole.length) {
            typeSpeed = 2000; // Pause at end
            isDeleting = true;
        } else if (isDeleting && charIndex === 0) {
            isDeleting = false;
            roleIndex = (roleIndex + 1) % roles.length;
            typeSpeed = 500; // Pause before next word
        }

        setTimeout(typeEffect, typeSpeed);
    }

    // Animate numbers
    function animateNumbers() {
        const statNumbers = document.querySelectorAll('.stat-number[data-count]');
        statNumbers.forEach(el => {
            const target = parseInt(el.getAttribute('data-count') || '0');
            const duration = 2000;
            const start = performance.now();

            function update(now: number) {
                const progress = Math.min((now - start) / duration, 1);
                const ease = 1 - Math.pow(1 - progress, 3);
                el.textContent = Math.floor(target * ease).toString();
                if (progress < 1) requestAnimationFrame(update);
                else el.textContent = target.toString();
            }
            requestAnimationFrame(update);
        });
    }

    // Update weather data
    async function updateWeather() {
        try {
            const weather = await getCurrentWeather();

            if (weather) {
                // Update Hero badge
                const heroTempEl = document.getElementById('hero-temp');
                const heroIconEl = document.getElementById('hero-weather-icon');

                if (heroTempEl) {
                    heroTempEl.textContent = `${weather.temperature}掳C`;
                }

                if (heroIconEl) {
                    heroIconEl.className = `fas ${weather.icon}`;
                    // Color based on weather
                    if (weather.icon.includes('sun')) {
                        heroIconEl.style.color = '#fbbf24';
                    } else if (weather.icon.includes('cloud')) {
                        heroIconEl.style.color = '#94a3b8';
                    } else if (weather.icon.includes('rain') || weather.icon.includes('bolt')) {
                        heroIconEl.style.color = '#60a5fa';
                    } else if (weather.icon.includes('moon')) {
                        heroIconEl.style.color = '#a78bfa';
                    } else {
                        heroIconEl.style.color = '#fbbf24';
                    }
                }

                // Add tooltip with weather details
                const locationBadge = document.getElementById('location-badge');
                if (locationBadge) {
                    locationBadge.setAttribute('data-tooltip',
                        `${weather.description} 路 Feels like ${weather.feelsLike}掳C 路 ${weather.humidity}% humidity`
                    );
                }

                // Update Header weather button
                const headerTempEl = document.getElementById('header-temp');
                const headerIconEl = document.getElementById('weather-icon');
                const weatherBtn = document.querySelector('.weather-btn');

                if (headerTempEl && headerIconEl && weatherBtn) {
                    headerTempEl.textContent = `${weather.temperature}掳`;
                    headerIconEl.className = `fas ${weather.icon} theme-icon`;
                    weatherBtn.classList.add('has-weather');
                }
            }
        } catch (error) {
            console.log('Weather API unavailable');
        }
    }

    // Update time display
    function updateTime() {
        const timeEl = document.getElementById('header-time');
        if (timeEl) {
            const time = getCurrentTime();
            if (time) {
                timeEl.textContent = time;
            }
        }
    }

    // Initialize
    setTimeout(typeEffect, 1500); // Start typing after animations
    setTimeout(animateNumbers, 1200); // Animate numbers
    updateWeather();
    updateTime();

    // Update time every minute
    setInterval(updateTime, 60000);

    // Update weather every 15 minutes
    setInterval(updateWeather, 15 * 60 * 1000);

    // Ripple effect for CTA buttons
    function createRipple(event: MouseEvent) {
        const button = event.currentTarget as HTMLElement;
        if (!button) return;

        // Remove existing ripples
        const existingRipples = button.querySelectorAll('.ripple');
        existingRipples.forEach(r => r.remove());

        const rect = button.getBoundingClientRect();
        const size = Math.max(rect.width, rect.height);
        const x = event.clientX - rect.left - size / 2;
        const y = event.clientY - rect.top - size / 2;

        const ripple = document.createElement('span');
        ripple.classList.add('ripple');
        ripple.style.width = ripple.style.height = `${size}px`;
        ripple.style.left = `${x}px`;
        ripple.style.top = `${y}px`;

        button.appendChild(ripple);

        // Remove ripple after animation
        setTimeout(() => ripple.remove(), 600);
    }

    // Attach ripple to all CTA buttons
    document.querySelectorAll('.btn').forEach(btn => {
        btn.addEventListener('click', createRipple as EventListener);
    });
</script>
