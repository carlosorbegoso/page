---
// GitHub Stats Section - Simplified Bento Grid Design
---

<section id="github" class="github-section section section-bg">
    <div class="container">
        <!-- Header -->
        <div class="section-header">
            <div class="section-badge github-animate" data-anim-delay="0">
                <i class="fab fa-github"></i>
                <span>GitHub</span>
            </div>
            <h2 class="section-title github-animate" data-anim-delay="100">
                <span class="title-gradient">Activity Overview</span>
            </h2>
            <p class="section-subtitle github-animate" data-anim-delay="200">
                Real-time stats from my GitHub profile
            </p>
        </div>

        <!-- Loading State with Skeleton -->
        <div id="github-loading" class="github-loading">
            <div class="skeleton-grid">
                <div class="skeleton-card">
                    <div class="skeleton-row">
                        <div class="skeleton skeleton-avatar"></div>
                        <div class="skeleton-col">
                            <div class="skeleton skeleton-title"></div>
                            <div class="skeleton skeleton-text medium"></div>
                        </div>
                    </div>
                </div>
                <div class="skeleton-stats-row">
                    <div class="skeleton-stat"><div class="skeleton skeleton-stat-value"></div><div class="skeleton skeleton-stat-label"></div></div>
                    <div class="skeleton-stat"><div class="skeleton skeleton-stat-value"></div><div class="skeleton skeleton-stat-label"></div></div>
                    <div class="skeleton-stat"><div class="skeleton skeleton-stat-value"></div><div class="skeleton skeleton-stat-label"></div></div>
                    <div class="skeleton-stat"><div class="skeleton skeleton-stat-value"></div><div class="skeleton skeleton-stat-label"></div></div>
                </div>
            </div>
            <p class="loading-text">Fetching live data...</p>
        </div>

        <!-- Error State -->
        <div id="github-error" class="github-error" style="display: none;">
            <i class="fas fa-exclamation-triangle"></i>
            <p>Unable to load GitHub data</p>
            <button id="github-retry" class="retry-btn">
                <i class="fas fa-redo"></i> Retry
            </button>
        </div>

        <!-- Bento Grid Content -->
        <div id="github-content" class="bento-grid" style="display: none;">
            <!-- Profile Card -->
            <div class="bento-card bento-profile github-animate" data-anim-delay="300">
                <div class="profile-content">
                    <div class="profile-left">
                        <div class="avatar-wrapper">
                            <img id="github-avatar" src="" alt="GitHub Avatar" class="github-avatar" loading="lazy" decoding="async">
                            <div class="avatar-ring"></div>
                            <span class="status-indicator"></span>
                        </div>
                        <div class="profile-info">
                            <h3 id="github-name">Loading...</h3>
                            <a id="github-link" href="" target="_blank" rel="noopener noreferrer" class="github-username">
                                <i class="fab fa-github"></i>
                                <span id="github-login">@username</span>
                            </a>
                            <p id="github-bio" class="github-bio"></p>
                            <div class="profile-meta">
                                <span id="github-location" class="meta-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span>Location</span>
                                </span>
                                <span id="github-years" class="meta-item">
                                    <i class="fas fa-calendar-alt"></i>
                                    <span>0 years on GitHub</span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <a href="https://github.com/carlosorbegoso" target="_blank" rel="noopener noreferrer" class="follow-btn">
                        <i class="fab fa-github"></i>
                        Follow
                    </a>
                </div>
            </div>

            <!-- Stats Cards Row -->
            <div class="bento-card bento-stat stat-repos github-animate" data-anim-delay="350">
                <div class="stat-icon"><i class="fas fa-folder-open"></i></div>
                <div class="stat-content">
                    <span class="stat-value" id="stat-repos">0</span>
                    <span class="stat-label">Repositories</span>
                </div>
            </div>

            <div class="bento-card bento-stat stat-stars github-animate" data-anim-delay="400">
                <div class="stat-icon"><i class="fas fa-star"></i></div>
                <div class="stat-content">
                    <span class="stat-value" id="stat-stars">0</span>
                    <span class="stat-label">Stars Earned</span>
                </div>
            </div>

            <div class="bento-card bento-stat stat-followers github-animate" data-anim-delay="450">
                <div class="stat-icon"><i class="fas fa-users"></i></div>
                <div class="stat-content">
                    <span class="stat-value" id="stat-followers">0</span>
                    <span class="stat-label">Followers</span>
                </div>
            </div>

            <div class="bento-card bento-stat stat-commits github-animate" data-anim-delay="500">
                <div class="stat-icon"><i class="fas fa-code-commit"></i></div>
                <div class="stat-content">
                    <span class="stat-value" id="stat-contributions">0</span>
                    <span class="stat-label">Contributions</span>
                </div>
            </div>

            <!-- Contribution Graph -->
            <div class="bento-card bento-contributions github-animate" data-anim-delay="550">
                <div class="card-header">
                    <h4><i class="fas fa-chart-line"></i> Contribution Graph</h4>
                    <span class="streak-badge" id="streak-badge">
                        <i class="fas fa-fire"></i>
                        <span id="current-streak">0</span> day streak
                    </span>
                </div>
                <div id="contribution-graph" class="contribution-graph"></div>
                <div class="contribution-legend">
                    <span>Less</span>
                    <div class="legend-squares">
                        <span class="legend-square level-0"></span>
                        <span class="legend-square level-1"></span>
                        <span class="legend-square level-2"></span>
                        <span class="legend-square level-3"></span>
                        <span class="legend-square level-4"></span>
                    </div>
                    <span>More</span>
                </div>
            </div>

            <!-- Languages Card -->
            <div class="bento-card bento-languages github-animate" data-anim-delay="600">
                <h4 class="card-title"><i class="fas fa-code"></i> Top Languages</h4>
                <div id="languages-chart" class="languages-chart"></div>
                <div id="languages-bar" class="languages-bar"></div>
            </div>

            <!-- Recent Activity Feed -->
            <div class="bento-card bento-activity github-animate" data-anim-delay="650">
                <h4 class="card-title"><i class="fas fa-bolt"></i> Recent Activity</h4>
                <div id="activity-feed" class="activity-feed"></div>
            </div>
        </div>
    </div>
</section>

<style>
    .github-section {
        position: relative;
        padding: 6rem 0;
        overflow: hidden;
    }

    /* Section Header */
    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgba(100, 181, 246, 0.08);
        border: 1px solid rgba(100, 181, 246, 0.2);
        border-radius: 50px;
        margin-bottom: 1.5rem;
        font-size: 0.85rem;
        color: var(--text-secondary);
    }

    .section-badge i {
        color: var(--primary-color);
        font-size: 0.9rem;
    }

    .section-title {
        font-size: clamp(2rem, 5vw, 3rem);
        font-weight: 800;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.25rem;
    }

    .title-gradient {
        background: linear-gradient(135deg, #fff 0%, var(--primary-color) 50%, #00ffff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .section-subtitle {
        font-size: 1.1rem;
        color: var(--text-secondary);
        max-width: 500px;
        margin: 0 auto;
    }

    /* Loading & Error States */
    .github-loading, .github-error {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        color: var(--text-secondary);
    }

    /* Skeleton Grid for Loading */
    .skeleton-grid {
        width: 100%;
        max-width: 800px;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .skeleton-row {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .skeleton-col {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        flex: 1;
    }

    .skeleton-stats-row {
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .loading-text {
        margin-top: 1.5rem;
        font-size: 0.9rem;
        opacity: 0.7;
    }

    .loading-spinner {
        width: 50px;
        height: 50px;
        border: 3px solid rgba(100, 181, 246, 0.1);
        border-top-color: var(--primary-color);
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin-bottom: 1rem;
    }

    @keyframes spin { to { transform: rotate(360deg); } }

    .github-error i { font-size: 3rem; color: var(--warning-color); margin-bottom: 1rem; }

    .retry-btn {
        margin-top: 1rem;
        padding: 0.75rem 1.5rem;
        background: rgba(100, 181, 246, 0.1);
        border: 1px solid rgba(100, 181, 246, 0.3);
        border-radius: 8px;
        color: var(--primary-color);
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .retry-btn:hover {
        background: rgba(100, 181, 246, 0.2);
        border-color: var(--primary-color);
    }

    /* Bento Grid Layout */
    .bento-grid {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        grid-auto-rows: minmax(80px, auto);
        gap: 1rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Card Base Styles */
    .bento-card {
        background: rgba(20, 25, 35, 0.6);
        border: 1px solid rgba(100, 181, 246, 0.1);
        border-radius: 1rem;
        padding: 1.25rem;
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .bento-card:hover {
        border-color: rgba(100, 181, 246, 0.3);
        transform: translateY(-2px);
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }

    /* Grid Positions - Simplified */
    .bento-profile { grid-column: span 8; grid-row: span 2; }
    .bento-stat { grid-column: span 3; }
    .bento-contributions { grid-column: span 8; grid-row: span 2; }
    .bento-languages { grid-column: span 4; grid-row: span 2; }
    .bento-activity { grid-column: span 4; grid-row: span 2; }

    /* Profile Card */
    .profile-content {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        height: 100%;
        gap: 1rem;
    }

    .profile-left {
        display: flex;
        gap: 1.25rem;
        align-items: flex-start;
    }

    .avatar-wrapper {
        position: relative;
        flex-shrink: 0;
    }

    .github-avatar {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        border: 3px solid transparent;
        background: linear-gradient(var(--bg-color), var(--bg-color)) padding-box,
                    linear-gradient(135deg, var(--primary-color), #00ffff) border-box;
    }

    .avatar-ring {
        position: absolute;
        inset: -6px;
        border-radius: 50%;
        border: 2px dashed rgba(100, 181, 246, 0.3);
        animation: rotate 20s linear infinite;
    }

    @keyframes rotate { to { transform: rotate(360deg); } }

    .status-indicator {
        position: absolute;
        bottom: 5px;
        right: 5px;
        width: 16px;
        height: 16px;
        background: #28c840;
        border: 3px solid var(--bg-color);
        border-radius: 50%;
    }

    .profile-info h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.25rem;
    }

    .github-username {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--primary-color);
        text-decoration: none;
        font-size: 0.95rem;
        transition: color 0.3s ease;
    }

    .github-username:hover { color: #00ffff; }

    .github-bio {
        margin-top: 0.75rem;
        color: var(--text-secondary);
        font-size: 0.9rem;
        line-height: 1.5;
    }

    .profile-meta {
        display: flex;
        gap: 1rem;
        margin-top: 0.75rem;
        flex-wrap: wrap;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        font-size: 0.8rem;
        color: var(--text-secondary);
    }

    .meta-item i { color: var(--primary-color); font-size: 0.75rem; }

    .follow-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.6rem 1.25rem;
        background: linear-gradient(135deg, var(--primary-color), #00bcd4);
        border: none;
        border-radius: 50px;
        color: #000;
        font-weight: 600;
        font-size: 0.85rem;
        text-decoration: none;
        transition: all 0.3s ease;
        flex-shrink: 0;
    }

    .follow-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(100, 181, 246, 0.4);
    }

    /* Stat Cards */
    .bento-stat {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem 1.25rem;
    }

    .stat-icon {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .stat-repos .stat-icon { background: rgba(100, 181, 246, 0.15); color: var(--primary-color); }
    .stat-stars .stat-icon { background: rgba(251, 191, 36, 0.15); color: #fbbf24; }
    .stat-followers .stat-icon { background: rgba(168, 85, 247, 0.15); color: #a855f7; }
    .stat-commits .stat-icon { background: rgba(74, 222, 128, 0.15); color: #4ade80; }

    .stat-content { display: flex; flex-direction: column; }

    .stat-value {
        font-size: 1.75rem;
        font-weight: 800;
        background: linear-gradient(135deg, var(--text-primary), var(--primary-color));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1.1;
    }

    .stat-label {
        font-size: 0.7rem;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* Contribution Graph */
    .bento-contributions .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .bento-contributions .card-header h4 {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.95rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    .bento-contributions .card-header h4 i { color: var(--primary-color); }

    .streak-badge {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.35rem 0.75rem;
        background: rgba(251, 191, 36, 0.1);
        border: 1px solid rgba(251, 191, 36, 0.3);
        border-radius: 50px;
        font-size: 0.75rem;
        color: #fbbf24;
        font-weight: 600;
    }

    .streak-badge i { font-size: 0.7rem; }

    .contribution-graph {
        display: grid;
        grid-template-columns: repeat(52, 1fr);
        gap: 3px;
        margin-bottom: 0.75rem;
    }

    .contribution-week {
        display: flex;
        flex-direction: column;
        gap: 3px;
    }

    .contribution-day {
        width: 100%;
        aspect-ratio: 1;
        border-radius: 2px;
        transition: all 0.2s ease;
    }

    .contribution-day:hover {
        transform: scale(1.5);
        z-index: 10;
    }

    .contribution-day.level-0 { background: rgba(100, 181, 246, 0.05); }
    .contribution-day.level-1 { background: rgba(100, 181, 246, 0.25); }
    .contribution-day.level-2 { background: rgba(100, 181, 246, 0.45); }
    .contribution-day.level-3 { background: rgba(100, 181, 246, 0.7); }
    .contribution-day.level-4 { background: var(--primary-color); }

    .contribution-legend {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        gap: 0.5rem;
        font-size: 0.65rem;
        color: var(--text-secondary);
    }

    .legend-squares { display: flex; gap: 3px; }

    .legend-square {
        width: 10px;
        height: 10px;
        border-radius: 2px;
    }

    .legend-square.level-0 { background: rgba(100, 181, 246, 0.05); }
    .legend-square.level-1 { background: rgba(100, 181, 246, 0.25); }
    .legend-square.level-2 { background: rgba(100, 181, 246, 0.45); }
    .legend-square.level-3 { background: rgba(100, 181, 246, 0.7); }
    .legend-square.level-4 { background: var(--primary-color); }

    /* Languages Card */
    .card-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.95rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 1rem;
    }

    .card-title i { color: var(--primary-color); }

    .languages-chart {
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
        margin-bottom: 1rem;
    }

    .language-item {
        display: flex;
        align-items: center;
        gap: 0.6rem;
    }

    .language-color {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        flex-shrink: 0;
    }

    .language-name {
        flex: 1;
        font-size: 0.8rem;
        color: var(--text-primary);
    }

    .language-percentage {
        font-size: 0.75rem;
        color: var(--text-secondary);
        font-weight: 600;
    }

    .languages-bar {
        display: flex;
        height: 8px;
        border-radius: 4px;
        overflow: hidden;
        background: rgba(100, 181, 246, 0.1);
    }

    .lang-bar-segment {
        height: 100%;
        transition: width 1s ease-out;
    }

    /* Activity Feed */
    .bento-activity {
        display: flex;
        flex-direction: column;
    }

    .activity-feed {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        flex: 1;
        overflow-y: auto;
        padding-right: 0.5rem;
    }

    .activity-feed::-webkit-scrollbar { width: 4px; }
    .activity-feed::-webkit-scrollbar-track { background: transparent; }
    .activity-feed::-webkit-scrollbar-thumb { background: rgba(100, 181, 246, 0.3); border-radius: 2px; }

    .activity-item {
        display: flex;
        gap: 0.75rem;
        padding: 0.6rem;
        background: rgba(100, 181, 246, 0.03);
        border-radius: 8px;
        transition: background 0.3s ease;
    }

    .activity-item:hover { background: rgba(100, 181, 246, 0.08); }

    .activity-icon {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(100, 181, 246, 0.1);
        border-radius: 8px;
        color: var(--primary-color);
        font-size: 0.8rem;
        flex-shrink: 0;
    }

    .activity-content { flex: 1; min-width: 0; }

    .activity-action {
        font-size: 0.8rem;
        color: var(--text-primary);
        margin-bottom: 0.15rem;
    }

    .activity-repo {
        font-size: 0.75rem;
        color: var(--primary-color);
        text-decoration: none;
        display: block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .activity-repo:hover { text-decoration: underline; }

    .activity-time {
        font-size: 0.65rem;
        color: var(--text-secondary);
    }

    /* Animations */
    .github-animate {
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .github-animate.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .bento-grid { grid-template-columns: repeat(6, 1fr); }
        .bento-profile { grid-column: span 6; }
        .bento-stat { grid-column: span 3; }
        .bento-contributions { grid-column: span 6; }
        .bento-languages { grid-column: span 3; }
        .bento-activity { grid-column: span 3; }
    }

    @media (max-width: 768px) {
        .github-section { padding: 4rem 0; }
        .bento-grid { grid-template-columns: 1fr; gap: 0.75rem; }
        .bento-profile, .bento-stat, .bento-contributions,
        .bento-languages, .bento-activity {
            grid-column: span 1;
            grid-row: span 1;
        }

        .profile-content { flex-direction: column; }
        .profile-left { flex-direction: column; align-items: center; text-align: center; }
        .profile-meta { justify-content: center; }
        .follow-btn { align-self: center; }

        .contribution-graph { grid-template-columns: repeat(26, 1fr); }
    }

    @media (max-width: 480px) {
        .bento-card { padding: 1rem; }
        .github-avatar { width: 70px; height: 70px; }
        .profile-info h3 { font-size: 1.25rem; }
        .stat-value { font-size: 1.5rem; }
        .stat-icon { width: 40px; height: 40px; font-size: 1rem; }
        .contribution-graph { grid-template-columns: repeat(13, 1fr); }
    }

    @media (prefers-reduced-motion: reduce) {
        .github-animate { transition: opacity 0.3s ease; transform: none; }
        .avatar-ring { animation: none; }
        .loading-spinner { animation: none; }
    }
</style>

<script>
    import { getGitHubStats, languageColors } from '../scripts/services/github-api.js';

    const loadingEl = document.getElementById('github-loading') as HTMLElement | null;
    const errorEl = document.getElementById('github-error') as HTMLElement | null;
    const contentEl = document.getElementById('github-content') as HTMLElement | null;
    const retryBtn = document.getElementById('github-retry') as HTMLButtonElement | null;

    function animateNumber(element: HTMLElement | null, target: number, duration = 1500): void {
        if (!element) return;
        const startTime = performance.now();

        function update(currentTime: number): void {
            const elapsed = currentTime - startTime;
            const progress = Math.min(elapsed / duration, 1);
            const easeOut = 1 - Math.pow(1 - progress, 3);
            element!.textContent = Math.floor(target * easeOut).toLocaleString();
            if (progress < 1) requestAnimationFrame(update);
        }

        requestAnimationFrame(update);
    }

    interface ContributionDay {
        date: string;
        count: number;
        level: number;
    }

    function renderContributionGraph(data: ContributionDay[][] | null): void {
        const container = document.getElementById('contribution-graph');
        if (!container || !data) return;

        const weeksToShow = window.innerWidth < 480 ? 13 : window.innerWidth < 768 ? 26 : 52;
        const displayData = data.slice(-weeksToShow);

        container.innerHTML = displayData.map((week: ContributionDay[]) => `
            <div class="contribution-week">
                ${week.map((day: ContributionDay) => `
                    <div class="contribution-day level-${day.level}"
                         title="${day.date}: ${day.count} contributions"></div>
                `).join('')}
            </div>
        `).join('');
    }

    interface LanguageStat {
        language: string;
        percentage: number;
    }

    function renderLanguages(languages: LanguageStat[]): void {
        const chartContainer = document.getElementById('languages-chart');
        const barContainer = document.getElementById('languages-bar');
        if (!chartContainer || !languages.length) return;

        chartContainer.innerHTML = languages.map(({ language, percentage }: LanguageStat) => {
            const color = (languageColors as Record<string, string>)[language] || '#8b8b8b';
            return `
                <div class="language-item">
                    <span class="language-color" style="background: ${color}"></span>
                    <span class="language-name">${language}</span>
                    <span class="language-percentage">${percentage}%</span>
                </div>
            `;
        }).join('');

        if (barContainer) {
            barContainer.innerHTML = languages.map(({ language, percentage }: LanguageStat) => {
                const color = (languageColors as Record<string, string>)[language] || '#8b8b8b';
                return `<div class="lang-bar-segment" style="width: ${percentage}%; background: ${color}"></div>`;
            }).join('');
        }
    }

    interface Activity {
        icon: string;
        action: string;
        repo: string;
        repoUrl: string;
        timeAgo: string;
    }

    function renderActivity(activities: Activity[]): void {
        const container = document.getElementById('activity-feed');
        if (!container || !activities.length) return;

        container.innerHTML = activities.map((activity: Activity) => `
            <div class="activity-item">
                <div class="activity-icon"><i class="${activity.icon}"></i></div>
                <div class="activity-content">
                    <div class="activity-action">${activity.action}</div>
                    <a href="${activity.repoUrl}" target="_blank" rel="noopener noreferrer" class="activity-repo">
                        ${activity.repo}
                    </a>
                    <span class="activity-time">${activity.timeAgo}</span>
                </div>
            </div>
        `).join('');
    }

    function showError(): void {
        if (loadingEl) loadingEl.style.display = 'none';
        if (errorEl) errorEl.style.display = 'flex';
        if (contentEl) contentEl.style.display = 'none';
    }

    function showContent(): void {
        if (loadingEl) loadingEl.style.display = 'none';
        if (errorEl) errorEl.style.display = 'none';
        if (contentEl) contentEl.style.display = 'grid';

        setTimeout(() => {
            document.querySelectorAll('.github-animate').forEach(el => {
                const delay = parseInt(el.getAttribute('data-anim-delay') || '0');
                setTimeout(() => el.classList.add('visible'), delay);
            });
        }, 100);
    }

    async function loadGitHubData(): Promise<void> {
        if (loadingEl) loadingEl.style.display = 'flex';
        if (errorEl) errorEl.style.display = 'none';
        if (contentEl) contentEl.style.display = 'none';

        try {
            const data = await getGitHubStats();

            if (!data) {
                showError();
                return;
            }

            // Update profile
            const avatarEl = document.getElementById('github-avatar') as HTMLImageElement | null;
            const nameEl = document.getElementById('github-name');
            const loginEl = document.getElementById('github-login');
            const linkEl = document.getElementById('github-link') as HTMLAnchorElement | null;
            const bioEl = document.getElementById('github-bio');

            if (avatarEl) avatarEl.src = data.profile.avatar;
            if (nameEl) nameEl.textContent = data.profile.name;
            if (loginEl) loginEl.textContent = `@${data.profile.login}`;
            if (linkEl) linkEl.href = `https://github.com/${data.profile.login}`;
            if (bioEl) bioEl.textContent = data.profile.bio || 'Passionate developer';

            const locationEl = document.getElementById('github-location');
            if (locationEl && data.profile.location) {
                const locationSpan = locationEl.querySelector('span');
                if (locationSpan) locationSpan.textContent = data.profile.location;
            }

            const yearsEl = document.getElementById('github-years');
            if (yearsEl) {
                const yearsSpan = yearsEl.querySelector('span');
                if (yearsSpan) yearsSpan.textContent = `${data.profile.yearsOnGitHub} years on GitHub`;
            }

            // Update streak
            const streakEl = document.getElementById('current-streak');
            if (streakEl) streakEl.textContent = String(data.stats.currentStreak);

            showContent();

            // Animate stats
            setTimeout(() => {
                animateNumber(document.getElementById('stat-repos'), data.stats.totalRepos);
                animateNumber(document.getElementById('stat-stars'), data.stats.totalStars);
                animateNumber(document.getElementById('stat-followers'), data.stats.followers);
                animateNumber(document.getElementById('stat-contributions'), data.stats.contributions);
            }, 500);

            // Render components
            renderContributionGraph(data.contributionData);
            renderLanguages(data.languages);
            renderActivity(data.activity);

        } catch (error) {
            console.error('Error loading GitHub data:', error);
            showError();
        }
    }

    retryBtn?.addEventListener('click', loadGitHubData);

    // Intersection Observer for lazy loading
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                loadGitHubData();
                observer.unobserve(entry.target);
            }
        });
    }, { threshold: 0.1 });

    const section = document.getElementById('github');
    if (section) observer.observe(section);
</script>
