---
// About section - Información personal con efectos mejorados
---

<section id="about" class="about section section-bg">
    <div class="container">
        <!-- Header -->
        <div class="section-header">
            <div class="section-badge animate-on-scroll">
                <i class="fas fa-user" aria-hidden="true"></i>
                <span>About Me</span>
            </div>
            <h2 class="section-title animate-on-scroll">About Me</h2>
            <p class="section-subtitle animate-on-scroll">Discover my story and passion for development</p>
        </div>

        <!-- Layout mejorado con dos columnas en desktop -->
        <div class="about-grid">
            <!-- Columna izquierda: Foto con efectos -->
            <div class="about-visual animate-on-scroll">
                <div class="profile-container">
                    <!-- Anillos animados -->
                    <div class="orbit-ring ring-1"></div>
                    <div class="orbit-ring ring-2"></div>
                    <div class="orbit-ring ring-3"></div>

                    <!-- Partículas orbitando -->
                    <div class="orbit-particle particle-1"></div>
                    <div class="orbit-particle particle-2"></div>
                    <div class="orbit-particle particle-3"></div>
                    <div class="orbit-particle particle-4"></div>

                    <!-- Foto -->
                    <div class="profile-photo-wrapper">
                        <img src="/images/profile.jpeg" alt="Carlos Orbegoso" class="profile-img">
                        <div class="photo-glow"></div>
                    </div>
                </div>

                <!-- Stats debajo de la foto -->
                <div class="stats-row">
                    <div class="stat-item">
                        <span class="stat-number" data-count="5">0</span>
                        <span class="stat-plus">+</span>
                        <span class="stat-label">Years</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number" data-count="50">0</span>
                        <span class="stat-plus">+</span>
                        <span class="stat-label">Projects</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number" data-count="100">0</span>
                        <span class="stat-plus">%</span>
                        <span class="stat-label">Commitment</span>
                    </div>
                </div>
            </div>

            <!-- Columna derecha: Contenido -->
            <div class="about-content animate-on-scroll">
                <h3 class="content-title">
                    <span class="title-highlight">Backend Developer</span>
                    <span class="title-separator">&</span>
                    <span class="title-accent">Java Specialist</span>
                </h3>

                <p class="content-description">
                    Backend developer with over <strong>5 years of experience</strong> building enterprise applications.
                    I specialize in creating <strong>robust, scalable systems</strong> using modern technologies
                    and best practices in software architecture.
                </p>

                <p class="content-description">
                    Passionate about <strong>clean code</strong>, <strong>microservices</strong>, and delivering
                    high-quality solutions that make a real impact.
                </p>

                <!-- Tech Stack con iconos -->
                <div class="tech-section">
                    <h4 class="tech-title">Tech Stack</h4>
                    <div class="tech-grid">
                        <div class="tech-item">
                            <i class="fab fa-java"></i>
                            <span>Java</span>
                        </div>
                        <div class="tech-item">
                            <i class="fas fa-leaf"></i>
                            <span>Spring Boot</span>
                        </div>
                        <div class="tech-item">
                            <i class="fas fa-rocket"></i>
                            <span>Quarkus</span>
                        </div>
                        <div class="tech-item">
                            <i class="fab fa-angular"></i>
                            <span>Angular</span>
                        </div>
                        <div class="tech-item">
                            <i class="fab fa-docker"></i>
                            <span>Docker</span>
                        </div>
                        <div class="tech-item">
                            <i class="fas fa-dharmachakra"></i>
                            <span>Kubernetes</span>
                        </div>
                    </div>
                </div>

                <!-- CTA -->
                <div class="about-cta">
                    <a href="#contact" class="cta-button primary">
                        <i class="fas fa-envelope"></i>
                        <span>Let's Talk</span>
                    </a>
                    <a href="#projects" class="cta-button secondary">
                        <i class="fas fa-folder-open"></i>
                        <span>View Work</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Grid principal */
    .about-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        align-items: center;
        max-width: 1100px;
        margin: 0 auto;
    }

    @media (min-width: 768px) {
        .about-grid {
            grid-template-columns: 1fr 1.2fr;
            gap: 4rem;
        }
    }

    /* Columna visual */
    .about-visual {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
    }

    /* Contenedor de foto con órbitas */
    .profile-container {
        position: relative;
        width: 220px;
        height: 220px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @media (min-width: 768px) {
        .profile-container {
            width: 280px;
            height: 280px;
        }
    }

    /* Anillos orbitales */
    .orbit-ring {
        position: absolute;
        border-radius: 50%;
        border: 1px solid;
        animation: orbit-rotate 20s linear infinite;
    }

    .ring-1 {
        width: 100%;
        height: 100%;
        border-color: rgba(0, 255, 255, 0.2);
        animation-duration: 25s;
    }

    .ring-2 {
        width: 130%;
        height: 130%;
        border-color: rgba(170, 68, 255, 0.15);
        animation-duration: 35s;
        animation-direction: reverse;
    }

    .ring-3 {
        width: 160%;
        height: 160%;
        border-color: rgba(255, 68, 170, 0.1);
        animation-duration: 45s;
    }

    @keyframes orbit-rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    /* Partículas orbitando */
    .orbit-particle {
        position: absolute;
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background: var(--primary-color);
        box-shadow: 0 0 10px var(--primary-color), 0 0 20px var(--primary-color);
    }

    .particle-1 {
        animation: orbit-particle-1 8s linear infinite;
    }

    .particle-2 {
        background: #aa44ff;
        box-shadow: 0 0 10px #aa44ff, 0 0 20px #aa44ff;
        animation: orbit-particle-2 12s linear infinite;
    }

    .particle-3 {
        background: #ff44aa;
        box-shadow: 0 0 10px #ff44aa, 0 0 20px #ff44aa;
        animation: orbit-particle-3 10s linear infinite reverse;
    }

    .particle-4 {
        background: #44ff88;
        box-shadow: 0 0 10px #44ff88, 0 0 20px #44ff88;
        animation: orbit-particle-4 15s linear infinite;
    }

    @keyframes orbit-particle-1 {
        0% { transform: rotate(0deg) translateX(110px) rotate(0deg); }
        100% { transform: rotate(360deg) translateX(110px) rotate(-360deg); }
    }

    @keyframes orbit-particle-2 {
        0% { transform: rotate(90deg) translateX(140px) rotate(-90deg); }
        100% { transform: rotate(450deg) translateX(140px) rotate(-450deg); }
    }

    @keyframes orbit-particle-3 {
        0% { transform: rotate(180deg) translateX(125px) rotate(-180deg); }
        100% { transform: rotate(540deg) translateX(125px) rotate(-540deg); }
    }

    @keyframes orbit-particle-4 {
        0% { transform: rotate(270deg) translateX(155px) rotate(-270deg); }
        100% { transform: rotate(630deg) translateX(155px) rotate(-630deg); }
    }

    /* Wrapper de foto */
    .profile-photo-wrapper {
        position: relative;
        width: 180px;
        height: 180px;
        z-index: 2;
        border-radius: 50%;
        overflow: hidden;
        background: linear-gradient(135deg, var(--primary-color), #00ffff, #aa44ff);
        padding: 4px;
        box-shadow:
            0 0 30px rgba(0, 255, 255, 0.4),
            0 0 60px rgba(0, 255, 255, 0.2),
            inset 0 0 20px rgba(0, 255, 255, 0.1);
        animation: border-rotate 6s linear infinite;
    }

    @media (min-width: 768px) {
        .profile-photo-wrapper {
            width: 220px;
            height: 220px;
            padding: 5px;
        }
    }

    @keyframes border-rotate {
        0% {
            background: linear-gradient(0deg, var(--primary-color), #00ffff, #aa44ff);
        }
        25% {
            background: linear-gradient(90deg, var(--primary-color), #00ffff, #aa44ff);
        }
        50% {
            background: linear-gradient(180deg, var(--primary-color), #00ffff, #aa44ff);
        }
        75% {
            background: linear-gradient(270deg, var(--primary-color), #00ffff, #aa44ff);
        }
        100% {
            background: linear-gradient(360deg, var(--primary-color), #00ffff, #aa44ff);
        }
    }

    .profile-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center top; /* Centra en la parte superior para caras */
        border-radius: 50%;
        background: var(--bg-color);
        display: block;
        transition: transform 0.5s ease;
    }

    .profile-photo-wrapper:hover .profile-img {
        transform: scale(1.05);
    }

    .photo-glow {
        position: absolute;
        inset: -25px;
        border-radius: 50%;
        background: radial-gradient(circle, rgba(0, 255, 255, 0.4) 0%, rgba(170, 68, 255, 0.2) 40%, transparent 70%);
        z-index: -1;
        animation: photo-pulse 3s ease-in-out infinite;
        pointer-events: none;
    }

    @keyframes photo-pulse {
        0%, 100% { opacity: 0.6; transform: scale(1); }
        50% { opacity: 1; transform: scale(1.08); }
    }

    /* Efecto de brillo giratorio */
    .profile-photo-wrapper::before {
        content: '';
        position: absolute;
        inset: -3px;
        background: conic-gradient(
            from 0deg,
            transparent,
            rgba(0, 255, 255, 0.8),
            transparent 30%
        );
        border-radius: 50%;
        z-index: -1;
        animation: glow-spin 4s linear infinite;
    }

    @keyframes glow-spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    /* Efecto adicional de partículas alrededor */
    .profile-photo-wrapper::after {
        content: '';
        position: absolute;
        inset: -8px;
        border-radius: 50%;
        border: 2px dashed rgba(0, 255, 255, 0.3);
        animation: dash-rotate 20s linear infinite;
    }

    @keyframes dash-rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(-360deg); }
    }

    /* Stats */
    .stats-row {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
    }

    .stat-item {
        text-align: center;
        padding: 1rem 1.25rem;
        background: rgba(0, 255, 255, 0.03);
        border: 1px solid rgba(0, 255, 255, 0.1);
        border-radius: 12px;
        transition: all 0.3s ease;
    }

    .stat-item:hover {
        background: rgba(0, 255, 255, 0.08);
        border-color: rgba(0, 255, 255, 0.3);
        transform: translateY(-3px);
    }

    .stat-number {
        font-size: 1.75rem;
        font-weight: 800;
        color: var(--primary-color);
        line-height: 1;
    }

    .stat-plus {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--primary-color);
    }

    .stat-label {
        display: block;
        font-size: 0.7rem;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-top: 0.25rem;
    }

    /* Contenido */
    .about-content {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .content-title {
        font-size: 1.75rem;
        font-weight: 700;
        line-height: 1.3;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        align-items: center;
    }

    @media (min-width: 768px) {
        .content-title {
            font-size: 2rem;
        }
    }

    .title-highlight {
        color: var(--primary-color);
    }

    .title-separator {
        color: var(--text-secondary);
        font-weight: 400;
    }

    .title-accent {
        color: #00ffff;
        text-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
    }

    .content-description {
        color: var(--text-secondary);
        line-height: 1.7;
        font-size: 1rem;
    }

    .content-description strong {
        color: var(--primary-color);
        font-weight: 600;
    }

    /* Tech Section */
    .tech-section {
        margin-top: 0.5rem;
    }

    .tech-title {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
    }

    .tech-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0.75rem;
    }

    @media (min-width: 480px) {
        .tech-grid {
            grid-template-columns: repeat(6, 1fr);
        }
    }

    .tech-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 0.5rem;
        background: rgba(0, 255, 255, 0.03);
        border: 1px solid rgba(0, 255, 255, 0.1);
        border-radius: 10px;
        transition: all 0.3s ease;
        cursor: default;
    }

    .tech-item:hover {
        background: rgba(0, 255, 255, 0.1);
        border-color: rgba(0, 255, 255, 0.4);
        transform: translateY(-3px);
        box-shadow: 0 5px 20px rgba(0, 255, 255, 0.2);
    }

    .tech-item i {
        font-size: 1.25rem;
        color: var(--primary-color);
        transition: transform 0.3s ease;
    }

    .tech-item:hover i {
        transform: scale(1.2);
    }

    .tech-item span {
        font-size: 0.65rem;
        color: var(--text-secondary);
        font-weight: 500;
        text-align: center;
    }

    /* CTA Buttons */
    .about-cta {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
        flex-wrap: wrap;
    }

    .cta-button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-size: 0.875rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .cta-button.primary {
        background: linear-gradient(135deg, var(--primary-color), #00ffff);
        color: #000;
        border: none;
    }

    .cta-button.primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 25px rgba(0, 255, 255, 0.4);
    }

    .cta-button.secondary {
        background: transparent;
        color: var(--primary-color);
        border: 1px solid rgba(0, 255, 255, 0.3);
    }

    .cta-button.secondary:hover {
        background: rgba(0, 255, 255, 0.1);
        border-color: rgba(0, 255, 255, 0.5);
        transform: translateY(-2px);
    }

    /* Animación al scroll */
    .animate-on-scroll {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease, transform 0.6s ease;
    }

    .animate-on-scroll.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Responsive pequeño */
    @media (max-width: 480px) {
        .stats-row {
            gap: 0.75rem;
        }

        .stat-item {
            padding: 0.75rem 1rem;
        }

        .stat-number {
            font-size: 1.5rem;
        }

        .content-title {
            font-size: 1.5rem;
            justify-content: center;
            text-align: center;
        }

        .about-content {
            text-align: center;
        }

        .about-cta {
            justify-content: center;
        }
    }
</style>

<script>
    // Animación de números contadores
    function animateCounters() {
        const counters = document.querySelectorAll('.stat-number[data-count]');

        counters.forEach(counter => {
            const target = parseInt(counter.getAttribute('data-count') || '0');
            const duration = 2000;
            const start = 0;
            const startTime = performance.now();

            function updateCounter(currentTime: number) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);

                // Easing
                const easeOut = 1 - Math.pow(1 - progress, 3);
                const current = Math.floor(start + (target - start) * easeOut);

                counter.textContent = current.toString();

                if (progress < 1) {
                    requestAnimationFrame(updateCounter);
                }
            }

            requestAnimationFrame(updateCounter);
        });
    }

    // Intersection Observer para animaciones
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');

                // Activar contadores si es la sección about
                if (entry.target.closest('#about')) {
                    animateCounters();
                }
            }
        });
    }, { threshold: 0.2 });

    document.querySelectorAll('.animate-on-scroll').forEach(el => {
        observer.observe(el);
    });
</script>
