---
// Footer component - Diseño minimalista y elegante
const currentYear = new Date().getFullYear();
---

<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <!-- Social icons -->
            <div class="footer-social">
                <a href="https://github.com/carlosorbegoso" target="_blank" rel="noopener noreferrer" class="footer-social-link" aria-label="GitHub">
                    <i class="fab fa-github"></i>
                </a>
                <a href="https://linkedin.com/in/carlos-orbergoso-loayza" target="_blank" rel="noopener noreferrer" class="footer-social-link" aria-label="LinkedIn">
                    <i class="fab fa-linkedin"></i>
                </a>
                <a href="mailto:car_11.09@hotmail.com" class="footer-social-link" aria-label="Email">
                    <i class="fas fa-envelope"></i>
                </a>
            </div>

            <!-- Copyright -->
            <div class="footer-bottom">
                <p class="footer-text">
                    &copy; {currentYear} Carlos Orbegoso
                </p>
                <span class="footer-dot">·</span>
                <p class="footer-tech">
                    Astro + Three.js
                </p>
            </div>

            <!-- Back to top button -->
            <button class="back-to-top" id="back-to-top" aria-label="Back to top">
                <i class="fas fa-chevron-up"></i>
            </button>
        </div>
    </div>
</footer>

<style>
    .footer {
        position: relative;
        padding: 2rem 0 1.5rem;
        background: rgba(13, 17, 23, 0.3);
        border-top: 1px solid rgba(100, 181, 246, 0.08);
    }

    .footer-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.25rem;
        position: relative;
    }

    /* Social links */
    .footer-social {
        display: flex;
        gap: 0.75rem;
    }

    .footer-social-link {
        width: 38px;
        height: 38px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(100, 181, 246, 0.05);
        border: 1px solid rgba(100, 181, 246, 0.12);
        border-radius: 10px;
        color: var(--text-secondary);
        text-decoration: none;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .footer-social-link:hover {
        background: rgba(100, 181, 246, 0.15);
        border-color: rgba(100, 181, 246, 0.3);
        color: var(--primary-color);
        transform: translateY(-2px);
    }

    /* Bottom section */
    .footer-bottom {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .footer-text,
    .footer-tech {
        color: var(--text-secondary);
        font-size: 0.75rem;
        opacity: 0.7;
        margin: 0;
    }

    .footer-dot {
        color: rgba(100, 181, 246, 0.3);
        font-size: 0.75rem;
    }

    /* Back to top button */
    .back-to-top {
        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 36px;
        height: 36px;
        background: rgba(100, 181, 246, 0.08);
        border: 1px solid rgba(100, 181, 246, 0.15);
        border-radius: 8px;
        color: var(--text-secondary);
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.8rem;
    }

    .back-to-top:hover {
        background: rgba(100, 181, 246, 0.15);
        border-color: rgba(100, 181, 246, 0.3);
        color: var(--primary-color);
        transform: translateY(-50%) translateY(-2px);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .footer {
            padding: 1.5rem 0 1.25rem;
        }

        .footer-content {
            gap: 1rem;
        }

        .footer-social-link {
            width: 42px;
            height: 42px;
        }

        .back-to-top {
            position: relative;
            transform: none;
            top: auto;
            right: auto;
            margin-top: 0.5rem;
        }

        .back-to-top:hover {
            transform: translateY(-2px);
        }
    }

    /* Safe area para dispositivos con notch */
    @supports (padding: max(0px)) {
        .footer {
            padding-bottom: max(1.5rem, env(safe-area-inset-bottom));
        }
    }
</style>

<script>
    // Back to top functionality
    const backToTop = document.getElementById('back-to-top');
    if (backToTop) {
        backToTop.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
    }
</script>
