---
// About section - Clean personal introduction
---

<section id="about" class="about section section-bg">
    <div class="container">
        <!-- Header -->
        <div class="section-header">
            <div class="section-badge animate-on-scroll">
                <i class="fas fa-user" aria-hidden="true"></i>
                <span>About Me</span>
            </div>
            <h2 class="section-title animate-on-scroll gradient-text-animated">Who I Am</h2>
        </div>

        <!-- Layout con dos columnas -->
        <div class="about-grid">
            <!-- Columna izquierda: Foto -->
            <div class="about-visual animate-on-scroll">
                <div class="profile-container">
                    <div class="profile-photo-wrapper">
                        <img src="/images/profile.jpeg" alt="Carlos Orbegoso" class="profile-img">
                    </div>
                </div>
            </div>

            <!-- Columna derecha: Contenido -->
            <div class="about-content animate-on-scroll">
                <h3 class="content-title">
                    <span class="title-highlight">Backend Developer</span>
                    <span class="title-separator">&</span>
                    <span class="title-accent">Java Specialist</span>
                </h3>

                <p class="content-description">
                    I am a passionate back-end developer with extensive Java experience.
                    I specialize in creating <strong>robust, scalable systems</strong> using modern technologies
                    and best practices in software architecture.
                </p>

                <p class="content-description">
                    Passionate about <strong>clean code</strong>, <strong>microservices</strong>, and delivering
                    high-quality solutions that make a real impact. Always eager to learn new technologies
                    and tackle challenging problems.
                </p>

                <!-- CTA -->
                <div class="about-cta">
                    <a href="#contact" class="cta-button primary">
                        <i class="fas fa-envelope"></i>
                        <span>Get In Touch</span>
                    </a>
                    <a href="#experience" class="cta-button secondary">
                        <i class="fas fa-briefcase"></i>
                        <span>View Experience</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .about.section {
        position: relative;
    }

    /* Grid principal */
    .about-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        align-items: center;
        max-width: 900px;
        margin: 0 auto;
    }

    @media (min-width: 768px) {
        .about-grid {
            grid-template-columns: auto 1fr;
            gap: 4rem;
        }
    }

    /* Columna visual */
    .about-visual {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Contenedor de foto */
    .profile-container {
        position: relative;
        width: 220px;
        height: 220px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @media (min-width: 768px) {
        .profile-container {
            width: 260px;
            height: 260px;
        }
    }

    .profile-photo-wrapper {
        position: relative;
        width: 200px;
        height: 200px;
        z-index: 2;
        border-radius: 50%;
        overflow: hidden;
        background: linear-gradient(135deg, var(--primary-color), #00ffff, #aa44ff);
        padding: 4px;
        box-shadow:
            0 0 30px rgba(0, 255, 255, 0.4),
            0 0 60px rgba(0, 255, 255, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .profile-photo-wrapper:hover {
        transform: scale(1.02);
        box-shadow:
            0 0 40px rgba(0, 255, 255, 0.5),
            0 0 80px rgba(0, 255, 255, 0.3);
    }

    @media (min-width: 768px) {
        .profile-photo-wrapper {
            width: 240px;
            height: 240px;
            padding: 5px;
        }
    }

    .profile-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center top;
        border-radius: 50%;
        background: var(--bg-color);
        display: block;
        transition: transform 0.5s ease;
    }

    .profile-photo-wrapper:hover .profile-img {
        transform: scale(1.05);
    }

    /* Contenido */
    .about-content {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .content-title {
        font-size: 1.75rem;
        font-weight: 700;
        line-height: 1.3;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        align-items: center;
    }

    @media (min-width: 768px) {
        .content-title {
            font-size: 2rem;
        }
    }

    .title-highlight {
        color: var(--primary-color);
    }

    .title-separator {
        color: var(--text-secondary);
        font-weight: 400;
    }

    .title-accent {
        color: #00ffff;
        text-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
    }

    .content-description {
        color: var(--text-secondary);
        line-height: 1.7;
        font-size: 1rem;
    }

    .content-description strong {
        color: var(--primary-color);
        font-weight: 600;
    }

    /* CTA Buttons */
    .about-cta {
        display: flex;
        gap: 1rem;
        margin-top: 0.5rem;
        flex-wrap: wrap;
    }

    .cta-button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-size: 0.875rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .cta-button.primary {
        background: linear-gradient(135deg, var(--primary-color), #00ffff);
        color: #000;
        border: none;
    }

    .cta-button.primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 25px rgba(0, 255, 255, 0.4);
    }

    .cta-button.secondary {
        background: transparent;
        color: var(--primary-color);
        border: 1px solid rgba(0, 255, 255, 0.3);
    }

    .cta-button.secondary:hover {
        background: rgba(0, 255, 255, 0.1);
        border-color: rgba(0, 255, 255, 0.5);
        transform: translateY(-2px);
    }

    /* Animaciones */
    .animate-on-scroll {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease, transform 0.6s ease;
    }

    .animate-on-scroll.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Responsive */
    @media (max-width: 480px) {
        .content-title {
            font-size: 1.5rem;
            justify-content: center;
            text-align: center;
        }

        .about-content {
            text-align: center;
        }

        .about-cta {
            justify-content: center;
        }
    }
</style>

<script>
    // Intersection Observer for animations
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
            }
        });
    }, { threshold: 0.2 });

    document.querySelectorAll('.animate-on-scroll').forEach(el => {
        observer.observe(el);
    });
</script>
